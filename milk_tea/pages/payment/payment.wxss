/* pages/payment/payment.wxss */
.payment-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 160rpx;
}

.header {
  background: linear-gradient(135deg, #D4A574, #B08968);
  padding: 60rpx 30rpx;
  color: white;
}

.amount-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.amount-section .label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  opacity: 0.9;
}

.amount-section .amount {
  font-size: 88rpx;
  font-weight: bold;
}

.countdown {
  text-align: center;
  font-size: 24rpx;
  opacity: 0.8;
}

.countdown .time {
  font-weight: bold;
  margin-left: 10rpx;
}

.payment-methods,
.order-info {
  background: white;
  margin: 20rpx 0;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.method-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.method-item:last-child {
  margin-bottom: 0;
}

.method-item.active {
  border-color: #D4A574;
  background: #FFF9E6;
}

.method-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-detail {
  display: flex;
  flex-direction: column;
}

.method-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.balance {
  font-size: 24rpx;
  color: #999;
}

.radio {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #CCC;
  border-radius: 50%;
  position: relative;
}

.radio.checked {
  border-color: #D4A574;
}

.radio.checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background: #D4A574;
  border-radius: 50%;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
}

.info-item .value {
  font-size: 28rpx;
  color: #333;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.cancel-btn,
.pay-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.cancel-btn {
  background: white;
  color: #999;
  border: 2rpx solid #E0E0E0;
}

.pay-btn {
  background: linear-gradient(135deg, #D4A574, #B08968);
  color: white;
}

.pay-btn.disabled {
  opacity: 0.6;
}
