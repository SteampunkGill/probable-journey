/* pages/index/index.wxss - 淡黄色+天蓝色暖色调 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg-secondary);
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: var(--bg-primary);
  gap: 20rpx;
  z-index: 10;
  transition: box-shadow var(--transition-fast);
}

.search-bar.shadow {
  box-shadow: var(--shadow-md);
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: var(--bg-secondary);
  border-radius: 50rpx;
  padding: 16rpx 30rpx;
  gap: 16rpx;
  transition: all var(--transition-fast);
}

.search-box-hover {
  background: var(--bg-tertiary);
  transform: scale(0.98);
}

.scan-btn {
  width: 48rpx;
  height: 48rpx;
  transition: transform 0.3s;
}

.scan-btn-hover {
  transform: scale(0.9) rotate(15deg);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.scan-btn {
  width: 48rpx;
  height: 48rpx;
  transition: transform var(--transition-fast);
}

.scan-btn-hover {
  transform: scale(0.9) rotate(15deg);
}

/* 骨架屏 */
.skeleton-container {
  padding: 20rpx;
}

.skeleton-banner {
  height: 360rpx;
  background: linear-gradient(90deg, #FFF9E6 25%, #FFE699 50%, #FFF9E6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: var(--radius-lg);
  margin-bottom: 20rpx;
}

.skeleton-mode {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-mode-item {
  flex: 1;
  height: 140rpx;
  background: linear-gradient(90deg, #FFF9E6 25%, #FFE699 50%, #FFF9E6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: var(--radius-lg);
}

.skeleton-menu {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.skeleton-menu-item {
  flex: 1;
  height: 120rpx;
  background: linear-gradient(90deg, #FFF9E6 25%, #FFE699 50%, #FFF9E6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: var(--radius-lg);
}

.skeleton-products {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.skeleton-product {
  height: 200rpx;
  background: linear-gradient(90deg, #FFF9E6 25%, #FFE699 50%, #FFF9E6 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: var(--radius-lg);
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 主内容区 */
.main-content {
  flex: 1;
}

/* 轮播图 */
.banner-swiper {
  height: 360rpx;
  margin: 20rpx;
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.6), transparent);
  z-index: 1;
}

.banner-title {
  color: var(--text-white);
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

/* 门店选择组件 */
.store-selector-section {
  margin: 20rpx;
  margin-top: -40rpx;
  padding: 30rpx;
  background: #ffffff; /* 强制白色背景防止变量失效 */
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 99;
}

.current-store {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  overflow: hidden;
}

.store-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.location-icon {
  width: 36rpx !important;
  height: 36rpx !important;
  flex-shrink: 0;
}

.store-name-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  overflow: hidden;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 320rpx;
}

.store-distance {
  font-size: 22rpx;
  color: #D4A574;
  white-space: nowrap;
}

.store-address-text {
  font-size: 24rpx;
  color: #999999;
  padding-left: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding-left: 30rpx;
  border-left: 2rpx solid #f5f5f5;
  flex-shrink: 0;
}

.re-location-icon {
  width: 44rpx !important;
  height: 44rpx !important;
}

.re-location-icon.rotating {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.location-action text {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* 点餐方式选择 */
.order-mode-section {
  margin: 20rpx;
}

.mode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.mode-buttons {
  display: flex;
  gap: 20rpx;
}

.mode-card {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: var(--bg-primary);
  padding: 30rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-fast);
}

.mode-card:active {
  transform: scale(0.98);
}

.mode-card.delivery {
  border: 2rpx solid var(--primary-color);
  background: linear-gradient(135deg, #FFFEF0, #FFF9E6);
}

.mode-card.pickup {
  border: 2rpx solid var(--secondary-color);
  background: linear-gradient(135deg, #F0F8FF, #E6F4FF);
}

.mode-icon {
  width: 80rpx;
  height: 80rpx;
}

.mode-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.mode-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.mode-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 快捷入口 */
.quick-menu {
  display: flex;
  background: var(--bg-primary);
  margin: 20rpx;
  padding: 30rpx 0;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.menu-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: transform var(--transition-fast);
}

.menu-item-hover {
  transform: translateY(-8rpx);
}

.menu-icon-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  transition: transform var(--transition-fast);
}

.menu-item:active .menu-icon {
  transform: scale(0.9);
}

.coupon-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: linear-gradient(135deg, #FF6B6B, #FF9966);
  color: var(--text-white);
  font-size: 20rpx;
  text-align: center;
  border-radius: 16rpx;
  padding: 0 6rpx;
  font-weight: bold;
  animation: badge-bounce 0.6s ease-in-out;
}

@keyframes badge-bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

.menu-name {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 通用区块 */
.section {
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.section-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: var(--text-tertiary);
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 推荐商品 */
.recommend-scroll {
  white-space: nowrap;
}

.recommend-list {
  display: flex;
  gap: 20rpx;
  padding: 0 10rpx;
}

.recommend-item {
  display: inline-block;
  width: 280rpx;
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.recommend-image {
  width: 100%;
  height: 280rpx;
}

.recommend-info {
  padding: 20rpx;
}

.recommend-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recommend-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.add-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 热门商品 */
.hot-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hot-item {
  display: flex;
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: 20rpx;
  gap: 20rpx;
  box-shadow: var(--shadow-sm);
}

.hot-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: var(--radius-md);
  flex-shrink: 0;
}

.hot-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hot-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.hot-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hot-meta {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.hot-price {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.hot-sales {
  font-size: 22rpx;
  color: var(--text-tertiary);
}

/* 促销活动 */
.promotion-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.promotion-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FFE699, #87CEEB);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  gap: 20rpx;
}

.promotion-icon {
  width: 60rpx;
  height: 60rpx;
}

.promotion-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.promotion-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.promotion-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.promotion-arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 门店卡片 */
.store-card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: 30rpx;
  box-shadow: var(--shadow-sm);
}

.store-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.store-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.store-status.open {
  background: rgba(82, 196, 26, 0.1);
  color: var(--success);
}

.store-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
}

.store-address,
.store-hours {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.store-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid var(--border-light);
}

.store-distance {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.store-call {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: var(--gradient-primary);
  color: var(--text-white);
  border-radius: 50rpx;
  font-size: 24rpx;
}

.call-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 底部占位 */
.bottom-space {
  height: 40rpx;
}

/* 购物车浮动按钮 */
.cart-float {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: var(--gradient-primary);
  border-radius: var(--radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(212,165,116,0.4);
  z-index: 100;
  transform: scale(0);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.cart-float.show {
  transform: scale(1);
}

.cart-float-hover {
  box-shadow: 0 12rpx 32rpx rgba(212,165,116,0.6);
  transform: scale(1.1) !important;
}

.cart-float:active {
  transform: scale(0.95);
}

.cart-ripple {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255,255,255,0.3);
  animation: ripple 2s infinite;
}

@keyframes ripple {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.cart-icon {
  width: 48rpx;
  height: 48rpx;
  position: relative;
  z-index: 1;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  background: linear-gradient(135deg, #FF6B6B, #FF9966);
  color: var(--text-white);
  font-size: 20rpx;
  text-align: center;
  border-radius: 18rpx;
  padding: 0 8rpx;
  font-weight: bold;
  border: 3rpx solid var(--bg-primary);
  z-index: 2;
  transition: transform var(--transition-fast);
}

.cart-badge.bounce {
  animation: badge-bounce 0.6s ease-in-out;
}

/* 动画效果 */
.animate-fade-in {
  animation: fadeIn 0.6s ease-in-out;
}

.animate-slide-up {
  animation: slideUp 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}
