/* pages/favorite/favorite.wxss */
.favorite-page {
  min-height: 100vh;
  background: #F5F5F5;
  display: flex;
  flex-direction: column;
}

/* 顶部操作栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-bottom: 1rpx solid #F0F0F0;
}

.count-text {
  font-size: 28rpx;
  color: #666;
}

.actions {
  display: flex;
  gap: 30rpx;
}

.action-btn {
  font-size: 28rpx;
  color: #D4A574;
}

/* 收藏列表 */
.favorite-list {
  flex: 1;
  padding: 20rpx;
}

.favorite-item {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  gap: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-footer {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.product-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #D4A574;
}

.product-sales {
  font-size: 22rpx;
  color: #999;
}

/* 右侧操作 */
.product-actions {
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-icon,
.add-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
  gap: 30rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.go-shopping-btn {
  margin-top: 20rpx;
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #D4A574, #B08968);
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}

/* 加载状态 */
.loading-state {
  padding: 100rpx;
  text-align: center;
  color: #999;
}
