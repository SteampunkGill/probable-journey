/* pages/order-list/order-list.wxss */
.order-list-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-top: 100rpx;
}

/* 标签页 */
.tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #D4A574;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #D4A574;
  border-radius: 2rpx;
}

/* 订单列表 */
.orders {
  padding: 20rpx;
}

.order-item {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  font-weight: bold;
}

.order-status.pending_payment {
  color: #FF6B6B;
}

.order-status.processing {
  color: #FFA940;
}

.order-status.completed {
  color: #52C41A;
}

/* 商品列表 */
.goods-list {
  padding: 20rpx 30rpx;
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 32rpx;
  color: #D4A574;
  font-weight: bold;
}

.goods-quantity {
  font-size: 28rpx;
  color: #999;
}

/* 订单信息 */
.order-info {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #F0F0F0;
  background: #FAFAFA;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  font-size: 26rpx;
}

.info-row .label {
  color: #999;
}

.info-row .value {
  color: #666;
}

.info-row.total {
  margin-top: 10rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #E0E0E0;
}

.info-row .amount {
  font-size: 36rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.pickup-code {
  font-size: 40rpx;
  color: #D4A574;
  font-weight: bold;
  letter-spacing: 4rpx;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 24rpx 30rpx;
  border-top: 1rpx solid #F0F0F0;
}

.action-btn {
  padding: 14rpx 32rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: none;
}

.action-btn.secondary {
  background: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
}

.action-btn.primary {
  background: linear-gradient(135deg, #D4A574, #B08968);
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #D4A574, #B08968);
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}

/* 加载更多 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}
