/* pages/coupon/coupon.wxss */
.coupon-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-top: 100rpx;
}

.tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #D4A574;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #D4A574;
}

.coupon-list {
  padding: 20rpx;
}

.coupon-item {
  display: flex;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.coupon-left {
  width: 200rpx;
  background: linear-gradient(135deg, #D4A574, #B08968);
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
}

.value {
  font-size: 56rpx;
  font-weight: bold;
}

.condition {
  font-size: 22rpx;
  margin-top: 10rpx;
}

.coupon-right {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.expire {
  font-size: 22rpx;
  color: #BBB;
  margin-bottom: 20rpx;
}

.use-btn {
  align-self: flex-end;
  padding: 12rpx 32rpx;
  background: #D4A574;
  color: white;
  border-radius: 50rpx;
  font-size: 24rpx;
  border: none;
}

.empty-state {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
}
