/* pages/settings/settings.wxss */
.settings-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin: 30rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 24rpx;
  opacity: 0.9;
}

.member-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
}

.level {
  font-size: 24rpx;
  font-weight: 500;
}

.login-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  backdrop-filter: blur(10rpx);
}

.login-btn::after {
  border: none;
}

/* 设置区域 */
.settings-section {
  background: white;
  border-radius: 20rpx;
  margin: 30rpx;
  overflow: hidden;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 30rpx 20rpx;
  font-weight: 500;
}

.settings-list {
  border-top: 1rpx solid #f0f0f0;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.setting-item:active {
  background-color: #f9f9f9;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #667eea;
}

.setting-title {
  font-size: 32rpx;
  color: #333;
}

.setting-right {
  display: flex;
  align-items: center;
}

.setting-value {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
  transform-origin: right center;
}

/* 退出登录区域 */
.logout-section {
  margin: 30rpx;
}

.logout-btn {
  background: white;
  color: #ff4d4f;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 90rpx;
  line-height: 90rpx;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #fff5f5;
}

/* 版本信息 */
.version-info {
  text-align: center;
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.version-info text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}

/* 图标字体 */
