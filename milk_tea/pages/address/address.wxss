/* pages/address/address.wxss */
.address-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 160rpx;
}

/* 地址列表 */
.address-list {
  padding: 20rpx;
}

.address-item {
  position: relative;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.address-item.selectable {
  padding-right: 100rpx;
}

.default-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #D4A574, #B08968);
  color: white;
  padding: 8rpx 24rpx;
  border-radius: 0 16rpx 0 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

/* 地址信息 */
.address-info {
  margin-bottom: 24rpx;
}

.name-phone {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  display: flex;
  align-items: flex-start;
}

.tag {
  flex-shrink: 0;
  padding: 4rpx 12rpx;
  background: #FFF9E6;
  color: #D4A574;
  border-radius: 8rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  border: 1rpx solid #D4A574;
}

.detail {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮 */
.address-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #F0F0F0;
}

.action-left {
  display: flex;
  align-items: center;
}

.action-label {
  font-size: 26rpx;
  color: #666;
  margin-left: 12rpx;
}

.action-right {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  border: none;
}

.action-btn.edit {
  background: #FFF9E6;
  color: #D4A574;
}

.action-btn.delete {
  background: #FFF5F5;
  color: #FF6B6B;
}

.action-btn .icon {
  font-size: 28rpx;
}

/* 选中标记 */
.selected-mark {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  background: #D4A574;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selected-mark .icon {
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.add-btn {
  width: 100%;
  background: linear-gradient(135deg, #D4A574, #B08968);
  color: white;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.add-btn .icon {
  font-size: 36rpx;
}
