/* pages/address/edit.wxss */
.edit-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 160rpx;
}

/* 表单 */
.form {
  padding: 20rpx;
}

.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.section-title {
  display: block;
  padding: 30rpx 0 20rpx;
  font-size: 28rpx;
  color: #666;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.clickable {
  cursor: pointer;
}

.form-item.textarea-item {
  align-items: flex-start;
}

.label {
  flex-shrink: 0;
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.label.required::before {
  content: '*';
  color: #FF6B6B;
  margin-right: 4rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.input::placeholder {
  color: #CCC;
}

.textarea {
  flex: 1;
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #333;
  padding-top: 10rpx;
}

.textarea::placeholder {
  color: #CCC;
}

.region-display {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.region-text {
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  font-size: 28rpx;
  color: #CCC;
}

.arrow {
  font-size: 48rpx;
  color: #CCC;
  margin-left: 20rpx;
}

.location-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #36CFC9;
  background: rgba(54, 207, 201, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  z-index: 10;
}

.location-btn .iconfont {
  margin-right: 6rpx;
  font-size: 28rpx;
}

/* 标签选项 */
.label-options {
  display: flex;
  gap: 20rpx;
  padding-bottom: 30rpx;
}

.label-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.label-item.active {
  border-color: #36CFC9;
  background: rgba(54, 207, 201, 0.05);
  color: #36CFC9;
  font-weight: bold;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.delete-btn {
  flex: 1;
  padding: 28rpx;
  background: white;
  color: #FF6B6B;
  border: 2rpx solid #FF6B6B;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.save-btn {
  flex: 2;
  padding: 28rpx;
  background: #36CFC9;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.save-btn.disabled {
  opacity: 0.6;
}
