.review-page {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

.order-info {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.order-no {
  font-size: 26rpx;
  color: #999;
}

.score-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.label {
  font-size: 30rpx;
  color: #333;
  margin-right: 30rpx;
}

.stars {
  display: flex;
  margin-right: 20rpx;
}

.star {
  font-size: 50rpx;
  color: #ddd;
  margin-right: 10rpx;
}

.star.active {
  color: #ffc107;
}

.score-text {
  font-size: 28rpx;
  color: #ffc107;
}

.content-section {
  margin-bottom: 40rpx;
  position: relative;
}

.content-input {
  width: 100%;
  height: 240rpx;
  background-color: #f8f8f8;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.word-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.image-section .label {
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 210rpx;
  height: 210rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.image-item:nth-child(3n) {
  margin-right: 0;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.upload-btn {
  width: 210rpx;
  height: 210rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.plus {
  font-size: 60rpx;
  line-height: 1;
}

.hint {
  font-size: 24rpx;
}

.footer {
  margin-top: 80rpx;
  padding-bottom: 60rpx;
}

.submit-btn {
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.submit-btn.disabled {
  background-color: #ffa39e;
}