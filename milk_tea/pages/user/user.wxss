/* pages/user/user.wxss */

/* 基础样式 */
page {
  background-color: #FFF9E6 !important;
}

.user-page {
  background: #FFF9E6;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-header {
  padding: 40rpx 30rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
  margin-left: 30rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.user-meta {
  display: flex;
  font-size: 24rpx;
  opacity: 0.9;
}

.user-level {
  margin-right: 30rpx;
}

.user-assets {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.asset-item {
  text-align: center;
}

.asset-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.asset-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 资产网格 */
.assets-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 30rpx;
}

.asset-card {
  text-align: center;
}

.asset-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
}

.asset-icon .iconfont {
  font-size: 40rpx;
  color: white;
}

.asset-name {
  font-size: 26rpx;
  color: #8B7500;
  display: block;
}

.asset-value {
  font-size: 28rpx;
  color: #D4A017;
  font-weight: bold;
}

/* 功能列表 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B7500;
}

.function-list {
  background: transparent;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  background: transparent;
}

.function-left {
  display: flex;
  align-items: center;
}

.function-left .iconfont {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.function-name {
  font-size: 30rpx;
  color: #8B7500;
}

/* 图标样式 */
.icon-right {
  font-size: 28rpx;
  color: #D4A017;
}