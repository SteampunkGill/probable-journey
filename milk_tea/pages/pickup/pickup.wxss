/* pages/pickup/pickup.wxss */
.pickup-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top-color: #D4A574;
  border-radius: 50%;
  animation: rotate 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 取餐码卡片 */
.pickup-card {
  margin: 20rpx;
  background: linear-gradient(135deg, #D4A574, #B08968);
  border-radius: 24rpx;
  padding: 40rpx;
  color: white;
  box-shadow: 0 8rpx 30rpx rgba(212, 165, 116, 0.3);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.status-badge {
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-badge.ready {
  background: #52C41A;
}

.status-badge.processing {
  background: #FFA940;
}

.order-no {
  font-size: 24rpx;
  opacity: 0.9;
}

.pickup-code-section {
  text-align: center;
  padding: 60rpx 0;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.pickup-code-section .label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  opacity: 0.9;
}

.pickup-code {
  display: block;
  font-size: 120rpx;
  font-weight: bold;
  letter-spacing: 20rpx;
  text-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 20rpx;
}

.pickup-code-section .hint {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

.order-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.info-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.store-address,
.time-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 4rpx;
}

.time-value {
  font-size: 28rpx;
  font-weight: bold;
}

.order-items {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
}

.items-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  font-size: 28rpx;
}

.item-count {
  opacity: 0.8;
}

.item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.item:last-child {
  margin-bottom: 0;
}

.item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.item-specs {
  font-size: 24rpx;
  opacity: 0.8;
}

.item-quantity {
  font-size: 28rpx;
  margin-left: 16rpx;
}

.card-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  color: white;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.action-btn.primary {
  background: white;
  color: #D4A574;
  border-color: white;
  font-weight: bold;
}

.action-btn .icon {
  font-size: 28rpx;
}

/* 其他待取餐订单 */
.other-orders {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.order-list {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding-bottom: 10rpx;
}

.order-item {
  flex-shrink: 0;
  width: 200rpx;
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  border: 2rpx solid #E0E0E0;
}

.order-item.active {
  border-color: #D4A574;
  background: #FFF9E6;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.pickup-code-small {
  font-size: 36rpx;
  font-weight: bold;
  color: #D4A574;
}

.status {
  font-size: 22rpx;
  color: #666;
}

.order-item .order-no {
  font-size: 22rpx;
  color: #999;
}

/* 扫码区域 */
.scan-section {
  margin: 40rpx 20rpx;
  text-align: center;
}

.scan-btn {
  background: white;
  border: 2rpx dashed #D4A574;
  border-radius: 20rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  color: #D4A574;
}

.scan-btn .icon {
  font-size: 88rpx;
}

.scan-btn .text {
  font-size: 32rpx;
  font-weight: bold;
}

.scan-hint {
  display: block;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 历史订单 */
.history-section {
  margin: 20rpx;
}

.history-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-left .pickup-code {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.history-left .order-no {
  font-size: 24rpx;
  color: #999;
}

.history-left .picked-time {
  font-size: 22rpx;
  color: #BBB;
}

.history-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.history-right .amount {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.history-right .arrow {
  font-size: 48rpx;
  color: #CCC;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-order-btn {
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #D4A574, #B08968);
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
}
