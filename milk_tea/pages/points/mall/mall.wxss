/* pages/points/mall/mall.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #ff6b6b, #ff8e53);
  padding: 30rpx 40rpx;
  color: white;
}

.points-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.points-value {
  font-size: 80rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.points-actions {
  display: flex;
  gap: 30rpx;
  width: 100%;
  justify-content: center;
}

.action-btn {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  padding: 15rpx 40rpx;
  font-size: 26rpx;
  backdrop-filter: blur(10px);
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 40rpx;
  background: white;
}

.search-input {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.5;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-clear image {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

.placeholder {
  color: #999;
}

/* 分类筛选 */
.category-scroll {
  white-space: nowrap;
  background: white;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.category-list {
  display: inline-flex;
  gap: 30rpx;
}

.category-item {
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  transition: all 0.3s;
}

.category-item.active {
  background: #ff6b6b;
  color: white;
}

/* 排序选项 */
.sort-scroll {
  white-space: nowrap;
  background: white;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.sort-list {
  display: inline-flex;
  gap: 20rpx;
}

.sort-item {
  padding: 12rpx 25rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  transition: all 0.3s;
}

.sort-item.active {
  background: #ff8e53;
  color: white;
}

/* 商品列表 */
.product-list {
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.product-item {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s;
}

.product-item:active {
  transform: scale(0.98);
}

.product-image {
  position: relative;
  height: 300rpx;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-hot {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: #ff6b6b;
  color: white;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.product-stock {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.product-info {
  padding: 25rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  height: 68rpx;
}

.product-points {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.current-points {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.original-points {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.product-actions {
  display: flex;
}

.exchange-btn {
  flex: 1;
  background: #ff6b6b;
  color: white;
  text-align: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.exchange-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}