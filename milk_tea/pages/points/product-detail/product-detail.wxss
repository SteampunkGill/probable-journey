/* pages/points/product-detail/product-detail.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 商品详情 */
.product-detail {
  padding-bottom: 200rpx;
}

/* 商品图片 */
.product-image {
  position: relative;
  height: 500rpx;
  overflow: hidden;
  background: white;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-hot {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  background: #ff6b6b;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 商品信息 */
.product-info {
  padding: 40rpx;
  background: white;
  margin-top: 20rpx;
}

.product-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

/* 积分信息 */
.points-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: #fff9f9;
  border-radius: 15rpx;
}

.current-points {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.current-points .label {
  font-size: 28rpx;
  color: #666;
}

.current-points .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.original-points {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.original-points .label {
  font-size: 24rpx;
  color: #999;
}

.original-points .value {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

/* 库存信息 */
.stock-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
  padding: 25rpx 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.stock-info .label {
  font-size: 28rpx;
  color: #666;
}

.stock-info .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stock-info .value.low-stock {
  color: #ff6b6b;
}

.stock-info .limit {
  margin-left: auto;
  font-size: 24rpx;
  color: #999;
}

/* 详情部分 */
.detail-section {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #eee;
}

.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
}

/* 数量选择 */
.quantity-section {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 15rpx;
}

.quantity-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ff6b6b;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
}

.quantity-btn.disabled {
  background: #ccc;
  color: #999;
}

.quantity-value {
  flex: 1;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.quantity-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 我的积分 */
.my-points {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff8e53);
  border-radius: 15rpx;
  color: white;
}

.my-points .label {
  font-size: 28rpx;
  opacity: 0.9;
}

.my-points .value {
  font-size: 40rpx;
  font-weight: bold;
}

.my-points .required {
  margin-left: auto;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: white;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.exchange-btn {
  background: #ff6b6b;
  color: white;
  text-align: center;
  padding: 30rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.exchange-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.back-btn {
  background: #ff6b6b;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}