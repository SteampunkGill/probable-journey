/* pages/points/records/records.wxss */
.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 标签页 */
.tabs {
  display: flex;
  background: white;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #ff6b6b;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #ff6b6b;
  border-radius: 2rpx;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 记录列表 */
.records-list {
  height: calc(100vh - 120rpx);
  padding: 30rpx;
}

.record-item {
  background: white;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.order-no {
  font-size: 26rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-weight: bold;
}

.order-status.COMPLETED {
  background: #e8f5e9;
  color: #4caf50;
}

.order-status.PENDING {
  background: #fff3e0;
  color: #ff9800;
}

.order-status.CANCELLED {
  background: #f5f5f5;
  color: #9e9e9e;
}

.order-status.PROCESSING {
  background: #e3f2fd;
  color: #2196f3;
}

/* 记录内容 */
.record-content {
  display: flex;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background: #f5f5f5;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.exchange-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.exchange-info .points {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.exchange-info .time {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.record-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn:active {
  background: #e0e0e0;
}

.confirm-btn {
  background: #ff6b6b;
  color: white;
}

.confirm-btn:active {
  background: #ff5252;
}

.detail-btn {
  background: #f5f5f5;
  color: #666;
}

.detail-btn:active {
  background: #e0e0e0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.back-btn {
  background: #ff6b6b;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}