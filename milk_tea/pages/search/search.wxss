/* pages/search/search.wxss */
.search-page {
  min-height: 100vh;
  background-color: #FFF8F0;
  padding: 20rpx;
}

/* 搜索头部样式 */
.search-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-input-wrapper {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.search-input-wrapper input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 0;
}

.search-input-wrapper input::placeholder {
  color: #999;
}

.icon-close {
  color: #ccc;
  font-size: 24rpx;
  padding: 10rpx;
}

/* 搜索操作图标（原取消按钮位置） */
.search-action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  padding: 15rpx;
  background: #E74C3C;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.search-action-icon:active {
  transform: scale(0.9);
  background: #C0392B;
}

/* 搜索历史样式 */
.search-history {
  margin-bottom: 40rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.icon-delete {
  color: #999;
  font-size: 24rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag {
  background: #FFFFFF;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid #eee;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 热门搜索样式 */
.hot-search {
  margin-bottom: 40rpx;
}

.hot-header {
  margin-bottom: 20rpx;
}

.hot-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.hot-tags {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.hot-tag {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 0;
}

.hot-tag.hot {
  color: #E74C3C;
  font-weight: 600;
}

/* 搜索建议样式 */
.search-suggest {
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.suggest-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.suggest-item:last-child {
  border-bottom: none;
}

.suggest-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.suggest-text {
  font-size: 26rpx;
  color: #333;
}

/* 搜索结果样式 */
.search-results {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.results-count {
  font-size: 24rpx;
  color: #666;
}

.sort-options {
  display: flex;
  gap: 30rpx;
}

.sort-option {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.sort-option.active {
  color: #E74C3C;
  background: #FFEEEC;
  font-weight: 600;
}

/* 筛选条件样式 */
.filter-options {
  margin-bottom: 30rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-tags {
  display: inline-flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.filter-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-tag.active {
  background: #E74C3C;
  color: #FFFFFF;
  transform: scale(1.05);
}

/* 商品列表样式 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

/* 空结果样式 */
.empty-results {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.empty-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn {
  background: #E74C3C;
  color: #FFFFFF;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.95);
}

.btn-secondary {
  background: transparent;
  color: #E74C3C;
  border: 1rpx solid #E74C3C;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .search-page {
    padding: 15rpx;
  }
  
  .product-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .search-input-wrapper {
    padding: 15rpx 25rpx;
  }
}

/* 动画效果 */
.search-input-wrapper,
.suggest-item,
.product-card {
  transition: all 0.3s ease;
}

.search-input-wrapper:active {
  transform: scale(0.98);
}

.suggest-item:active {
  background: #f8f8f8;
  transform: translateX(10rpx);
}

.history-tag:active,
.hot-tag:active {
  transform: scale(0.95);
  background: #f5f5f5;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  display: none;
}

/* 安全区域适配 */
.safe-area {
  padding-bottom: env(safe-area-inset-bottom);
}