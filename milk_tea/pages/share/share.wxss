/* pages/share/share.wxss */

/* 图标字体扩展 */
@font-face {
  font-family: 'iconfont';
  src: url('https://at.alicdn.com/t/font_1234567_abcdefghijkl.woff2') format('woff2'),
       url('https://at.alicdn.com/t/font_1234567_abcdefghijkl.woff') format('woff'),
       url('https://at.alicdn.com/t/font_1234567_abcdefghijkl.ttf') format('truetype');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-left:before { content: "\e601"; }
.icon-right:before { content: "\e602"; }
.icon-user-plus:before { content: "\e613"; }
.icon-share:before { content: "\e614"; }
.icon-shopping:before { content: "\e615"; }
.icon-gift:before { content: "\e609"; }
.icon-wechat:before { content: "\e616"; }
.icon-timeline:before { content: "\e617"; }

/* 页面样式 */
.share-page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 卡片悬停效果 */
.stats-card, .share-link-card, .share-methods, .rewards-section, .share-tips {
  transition: all 0.3s ease;
}

.stats-card:active, .share-link-card:active, .share-methods:active, .rewards-section:active, .share-tips:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 分享方式悬停效果 */
.share-method {
  transition: all 0.3s ease;
}

.share-method:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 奖励项目悬停效果 */
.reward-item {
  transition: all 0.3s ease;
}

.reward-item:active {
  transform: translateX(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
button {
  transition: all 0.3s ease;
}

button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .stats-card .grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }
  
  .share-methods .grid {
    grid-template-columns: 1fr !important;
  }
}

/* 动画效果 */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stats-card {
  animation: slideIn 0.5s ease-out;
}

.share-link-card {
  animation: slideIn 0.5s ease-out 0.1s both;
}

.share-methods {
  animation: slideIn 0.5s ease-out 0.2s both;
}

.rewards-section {
  animation: slideIn 0.5s ease-out 0.3s both;
}

.share-tips {
  animation: slideIn 0.5s ease-out 0.4s both;
}

/* 奖励状态样式 */
.reward-status {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.reward-status.completed {
  background: #73D13D;
  color: white;
}

.reward-status.pending {
  background: #FFA940;
  color: white;
}

/* 分享链接样式 */
.share-link {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  border: 1rpx solid #FFE8A3;
  font-size: 26rpx;
  color: #8B7355;
  word-break: break-all;
  line-height: 1.4;
}