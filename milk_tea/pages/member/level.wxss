/* pages/member/level.wxss */

/* 图标字体 */
@font-face {
  font-family: 'iconfont';
  src: url('https://at.alicdn.com/t/font_1234567_abcdefghijkl.woff2') format('woff2'),
       url('https://at.alicdn.com/t/font_1234567_abcdefghijkl.woff') format('woff'),
       url('https://at.alicdn.com/t/font_1234567_abcdefghijkl.ttf') format('truetype');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-left:before { content: "\e601"; }
.icon-right:before { content: "\e602"; }
.icon-user:before { content: "\e603"; }
.icon-star:before { content: "\e604"; }
.icon-diamond:before { content: "\e605"; }
.icon-crown:before { content: "\e606"; }
.icon-rocket:before { content: "\e607"; }
.icon-tag:before { content: "\e608"; }
.icon-gift:before { content: "\e609"; }
.icon-shipping:before { content: "\e610"; }
.icon-service:before { content: "\e611"; }
.icon-flask:before { content: "\e612"; }

/* 页面样式 */
.level-page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 等级项目悬停效果 */
.level-item {
  transition: all 0.3s ease;
}

.level-item.current {
  box-shadow: 0 8rpx 20rpx rgba(212, 165, 116, 0.2);
  transform: translateY(-4rpx);
}

.level-item:active {
  transform: scale(0.98);
}

/* 特权项目悬停效果 */
.privilege-item {
  transition: all 0.3s ease;
}

.privilege-item:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
button {
  transition: all 0.3s ease;
}

button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .privileges-grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.current-level-card {
  animation: fadeIn 0.6s ease-out;
}

.levels-section {
  animation: fadeIn 0.6s ease-out 0.1s both;
}

.privileges-section {
  animation: fadeIn 0.6s ease-out 0.2s both;
}

.upgrade-tip {
  animation: fadeIn 0.6s ease-out 0.3s both;
}