/* pages/cart/cart.wxss */
.cart-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 购物车头部 */
.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: var(--white);
  border-bottom: 2rpx solid var(--gray-light);
}

.cart-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-dark);
}

.cart-actions {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.edit-btn,
.clear-btn {
  font-size: 28rpx;
  color: var(--accent-brown);
  font-weight: 500;
}

.edit-btn:active,
.clear-btn:active {
  opacity: 0.8;
}

/* 空购物车 */
.empty-cart {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-dark);
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: var(--text-light);
  margin-bottom: 50rpx;
}

/* 购物车列表 */
.cart-list {
  flex: 1;
}

/* 全选区域 */
.select-all-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: var(--white);
  border-bottom: 2rpx solid var(--gray-light);
}

.select-all-checkbox {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid var(--gray-medium);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.checkbox.checked {
  border-color: var(--accent-brown);
  background: var(--accent-brown);
}

.checkbox .iconfont {
  font-size: 24rpx;
  color: white;
}

.select-all-text {
  font-size: 28rpx;
  color: var(--text-dark);
}

.selected-info {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 购物车商品项 */
.cart-items {
  background: var(--white);
}

.cart-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--gray-light);
  position: relative;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-checkbox {
  margin-right: 20rpx;
  margin-top: 60rpx;
}

.item-content {
  flex: 1;
  display: flex;
}

.item-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.item-name {
  font-size: 30rpx;
  color: var(--text-dark);
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.item-price {
  text-align: right;
  flex-shrink: 0;
}

.current-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--accent-brown);
  display: block;
}

.original-price {
  font-size: 24rpx;
  color: var(--gray-dark);
  text-decoration: line-through;
  display: block;
  margin-top: 5rpx;
}

.customization-info {
  font-size: 24rpx;
  color: var(--text-light);
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-info {
  flex: 1;
}

.subtotal {
  font-size: 28rpx;
  color: var(--text-dark);
  font-weight: 500;
}

.action-buttons {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.delete-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

/* 优惠券区域 */
.coupon-section {
  margin: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 28rpx;
  color: var(--text-dark);
  font-weight: 500;
}

.coupon-info {
  display: flex;
  align-items: center;
}

.available-coupons {
  font-size: 24rpx;
  color: var(--accent-brown);
  margin-right: 10rpx;
}

.selected-coupon {
  font-size: 24rpx;
  color: var(--error);
  margin-right: 10rpx;
}

.coupon-info .iconfont {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 积分区域 */
.points-section {
  margin: 20rpx;
}

.points-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.available-points {
  font-size: 24rpx;
  color: var(--text-light);
}

.points-detail {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid var(--gray-light);
}

.points-rate,
.points-max {
  font-size: 24rpx;
  color: var(--text-light);
  display: block;
  margin-bottom: 15rpx;
}

.points-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.points-input input {
  flex: 1;
  padding: 15rpx 20rpx;
  border: 2rpx solid var(--gray-light);
  border-radius: 10rpx;
  font-size: 28rpx;
}

.points-value {
  font-size: 28rpx;
  color: var(--accent-brown);
  font-weight: bold;
  min-width: 120rpx;
  text-align: right;
}

/* 备注区域 */
.remark-section {
  margin: 20rpx;
}

.remark-input {
  width: 100%;
  height: 150rpx;
  padding: 20rpx;
  border: 2rpx solid var(--gray-light);
  border-radius: 10rpx;
  font-size: 28rpx;
  color: var(--text-dark);
  margin-top: 15rpx;
  box-sizing: border-box;
}

.remark-counter {
  text-align: right;
  font-size: 24rpx;
  color: var(--text-light);
  margin-top: 10rpx;
}

/* 底部结算栏 */
.bottom-settlement {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--white);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.settlement-left {
  flex: 1;
}

.total-amount {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.total-label {
  font-size: 24rpx;
  color: var(--text-light);
  margin-right: 10rpx;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--accent-brown);
}

.discount-info {
  font-size: 22rpx;
  color: var(--error);
}

.settlement-right {
  flex-shrink: 0;
}

.edit-mode-btn {
  min-width: 200rpx;
}

.checkout-btn {
  min-width: 200rpx;
}

.btn-disabled {
  background: var(--gray-light);
  color: var(--gray-dark);
}