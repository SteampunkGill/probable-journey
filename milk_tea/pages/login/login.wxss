/* pages/login/login.wxss */

/* 页面背景 */
.login-page {
  min-height: 100vh;
  background: #FFF9E6;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  text-align: center;
  margin: 40rpx 0 60rpx 0;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 4rpx solid #FFD166;
  background: #FFD166;
}

.app-name {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #8B7500;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 30rpx;
  color: #B38B00;
}

/* 登录卡片 */
.login-card {
  background: white;
  border-radius: 25rpx;
  padding: 40rpx 35rpx;
  box-shadow: 0 8rpx 40rpx rgba(255, 200, 100, 0.15);
  margin-bottom: 30rpx;
  flex: 1;
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  margin-bottom: 50rpx;
  background: #F8F8F8;
  border-radius: 50rpx;
  padding: 6rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 22rpx 0;
  font-size: 30rpx;
  color: #666;
  border-radius: 45rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #FFD166;
  color: #8B7500;
  font-weight: bold;
}

/* 表单内容 */
.form-content {
  margin-bottom: 30rpx;
}

/* 表单组 */
.form-group {
  margin-bottom: 35rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  height: 90rpx;
  background: #F9F9F9;
  border-radius: 45rpx;
  border: 2rpx solid #EEE;
  padding: 0 30rpx;
  transition: all 0.3s;
}

.input-wrapper.input-focus {
  border-color: #FFD166 !important;
  background: #FFFDF0 !important;
  box-shadow: 0 0 10rpx rgba(255, 209, 102, 0.3);
}

.input-icon {
  color: #D4A017;
  font-size: 34rpx;
  margin-right: 20rpx;
  min-width: 40rpx;
  text-align: center;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  color: #333;
  background: transparent;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 眼睛图标 */
.eye-icon {
  color: #D4A017;
  font-size: 36rpx;
  padding: 10rpx;
  cursor: pointer;
}

/* 清空按钮 */
.clear-btn {
  color: #999;
  font-size: 28rpx;
  padding: 10rpx;
  cursor: pointer;
}

/* 短信按钮 */
.sms-btn {
  min-width: 180rpx;
  height: 65rpx;
  line-height: 65rpx;
  background: #FFD166;
  color: #8B7500;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: bold;
  border: none;
  margin-left: 15rpx;
  padding: 0 20rpx;
  white-space: nowrap;
}

.sms-btn.disabled {
  background: #EEE;
  color: #999;
}

/* 记住我 */
.remember-section {
  margin-bottom: 35rpx;
}

.remember-label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.remember-text {
  margin-left: 12rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #FFD166;
  color: #8B7500;
  border-radius: 45rpx;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 30rpx;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.login-btn:disabled {
  background: #EEE;
  color: #999;
}

.loading-icon {
  animation: rotate 1s linear infinite;
  margin-right: 10rpx;
  font-size: 32rpx;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 底部操作 */
.bottom-actions {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.action-text {
  color: #D4A017;
  font-size: 26rpx;
  padding: 0 25rpx;
}

.separator {
  color: #DDD;
  font-size: 26rpx;
}

/* 开发工具 */
.dev-tools {
  margin-top: 30rpx;
  padding-top: 25rpx;
  border-top: 1rpx dashed #FFE8A3;
}

.dev-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.dev-btn {
  background: #FFE8A3 !important;
  color: #8B7500 !important;
  border: none !important;
  font-size: 22rpx !important;
  line-height: 1.5 !important;
  min-width: 120rpx;
  height: 50rpx !important;
  border-radius: 25rpx !important;
}

/* 协议区域 */
.agreement-section {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 253, 240, 0.8);
  border-radius: 20rpx;
  padding: 20rpx 15rpx;
  border: 1rpx solid #FFE8A3;
  margin-bottom: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  flex-shrink: 0;
}

.agreement-section checkbox-group {
  margin-right: 15rpx;
  flex-shrink: 0;
}

.agreement-text {
  font-size: 24rpx;
  color: #8B7500;
  line-height: 1.4;
  display: inline;
  white-space: nowrap;
}

.agreement-link {
  color: #D4A017;
  font-weight: bold;
  text-decoration: underline;
  margin: 0 4rpx;
}

/* 其他登录方式 */
.other-login {
  text-align: center;
  margin-bottom: 40rpx;
  flex-shrink: 0;
}

.other-title {
  display: block;
  color: #999;
  font-size: 26rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.other-title::before,
.other-title::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 60rpx;
  height: 1rpx;
  background: #EEE;
}

.other-title::before {
  left: -70rpx;
}

.other-title::after {
  right: -70rpx;
}

/* 微信登录按钮 */
.wechat-btn {
  width: 300rpx;
  height: 80rpx;
  background: white;
  border: 2rpx solid #D4A017;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.wechat-btn .iconfont {
  color: #D4A017;
  font-size: 38rpx;
  margin-right: 12rpx;
}

.wechat-text {
  color: #8B7500;
  font-size: 30rpx;
  font-weight: bold;
}

/* 游客登录 */
.guest-login {
  text-align: center;
  padding: 20rpx;
  margin-top: auto;
  padding-bottom: 40rpx;
}

.guest-text {
  color: #D4A017;
  font-size: 26rpx;
  text-decoration: underline;
}

/* 适配小屏幕 */
@media (max-height: 600px) {
  .header {
    margin: 20rpx 0 40rpx 0;
  }
  
  .logo {
    width: 120rpx;
    height: 120rpx;
  }
  
  .login-card {
    padding: 30rpx 25rpx;
  }
}