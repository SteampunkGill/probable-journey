<view class="register-page">
  <view class="header">
    <text class="title">注册账号</text>
    <text class="subtitle">加入奶茶小店，开启美味之旅</text>
  </view>

  <view class="form-card">
    <view class="form-group">
      <view class="input-wrapper">
        <text class="iconfont icon-user"></text>
        <input 
          type="text" 
          placeholder="请输入用户名" 
          value="{{username}}"
          bindinput="onUsernameInput"
        />
      </view>
    </view>

    <view class="form-group">
      <view class="input-wrapper">
        <text class="iconfont icon-phone"></text>
        <input 
          type="number" 
          placeholder="请输入手机号" 
          value="{{phone}}"
          bindinput="onPhoneInput"
        />
      </view>
    </view>

    <view class="form-group">
      <view class="input-wrapper">
        <text class="iconfont icon-lock"></text>
        <input 
          type="password" 
          placeholder="请输入密码" 
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>
    </view>

    <view class="form-group">
      <view class="input-wrapper">
        <text class="iconfont icon-lock"></text>
        <input 
          type="password" 
          placeholder="请再次输入密码" 
          value="{{confirmPassword}}"
          bindinput="onConfirmPasswordInput"
        />
      </view>
    </view>

    <button class="register-btn" bindtap="handleRegister" loading="{{loading}}">立即注册</button>
    
    <view class="login-link" bindtap="goToLogin">
      已有账号？<text class="link-text">立即登录</text>
    </view>
  </view>
</view>