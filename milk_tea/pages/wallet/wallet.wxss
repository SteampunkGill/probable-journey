/* pages/wallet/wallet.wxss */
.wallet-page {
  min-height: 100vh;
  background: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 余额卡片 */
.balance-card {
  position: relative;
  margin: 20rpx;
  height: 400rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(212,165,116,0.3);
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #D4A574, #B08968);
}

.card-content {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  padding: 40rpx;
}

.balance-label {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.balance-amount {
  font-size: 88rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.card-actions {
  display: flex;
  gap: 40rpx;
}

.action-btn {
  width: 180rpx;
  padding: 24rpx;
  background: rgba(255,255,255,0.2);
  border: 2rpx solid rgba(255,255,255,0.5);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-btn .icon {
  font-size: 48rpx;
}

/* 菜单 */
.menu-section {
  margin: 20rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  font-size: 44rpx;
}

.menu-title {
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 48rpx;
  color: #CCC;
}

/* 提示 */
.tips-section {
  margin: 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 2;
}
