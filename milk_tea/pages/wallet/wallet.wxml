<!--pages/wallet/wallet.wxml-->
<view class="wallet-page">
  <!-- 余额卡片 -->
  <view class="balance-card">
    <view class="card-bg"></view>
    <view class="card-content">
      <text class="balance-label">账户余额（元）</text>
      <text class="balance-amount">{{balance}}</text>
      
      <view class="card-actions">
        <button class="action-btn" bindtap="recharge">
          <text class="icon">💰</text>
          <text>充值</text>
        </button>
        <button class="action-btn" bindtap="withdraw">
          <text class="icon">💸</text>
          <text>提现</text>
        </button>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="viewDetail">
      <view class="menu-left">
        <text class="menu-icon">📋</text>
        <text class="menu-title">交易明细</text>
      </view>
      <text class="menu-arrow">›</text>
    </view>
    
    <view class="menu-item" bindtap="viewDetail">
      <view class="menu-left">
        <text class="menu-icon">🎁</text>
        <text class="menu-title">充值优惠</text>
      </view>
      <text class="menu-arrow">›</text>
    </view>
  </view>

  <!-- 说明 -->
  <view class="tips-section">
    <view class="tips-title">💡 温馨提示</view>
    <text class="tips-text">• 余额可用于支付订单</text>
    <text class="tips-text">• 提现将在1-3个工作日内到账</text>
    <text class="tips-text">• 充值赠送积分，多充多送</text>
  </view>
</view>
