/* components/coupon-selector/coupon-selector.wxss */
.coupon-selector {
  width: 100%;
}

/* 触发器 */
.default-trigger {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 2rpx solid var(--gray-light);
  border-radius: 10rpx;
  background: var(--white);
  min-height: 80rpx;
}

.default-trigger.has-value {
  border-color: var(--accent-brown);
  background: rgba(212, 165, 116, 0.05);
}

.trigger-content {
  flex: 1;
  margin-right: 20rpx;
}

.trigger-text {
  font-size: 28rpx;
  color: var(--text-dark);
  display: block;
  margin-bottom: 5rpx;
}

.default-trigger:not(.has-value) .trigger-text {
  color: var(--text-light);
}

.trigger-desc {
  font-size: 24rpx;
  color: var(--accent-brown);
}

.default-trigger .iconfont {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 弹窗 */
.coupon-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.modal-mask {
  flex: 1;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: var(--white);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--gray-light);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-dark);
}

.modal-header .iconfont {
  font-size: 36rpx;
  color: var(--text-light);
}

/* 筛选标签 */
.filter-tabs {
  border-bottom: 2rpx solid var(--gray-light);
}

.tab-scroll {
  white-space: nowrap;
  padding: 20rpx 30rpx;
}

.tab-list {
  display: inline-flex;
  gap: 30rpx;
}

.tab-item {
  display: inline-block;
  padding: 15rpx 25rpx;
  background: var(--gray-light);
  color: var(--text-light);
  border-radius: 30rpx;
  font-size: 26rpx;
  white-space: nowrap;
}

.tab-item.active {
  background: linear-gradient(135deg, var(--secondary-brown), var(--accent-brown));
  color: white;
  font-weight: 500;
}

/* 优惠券列表 */
.coupon-list {
  flex: 1;
  padding: 20rpx;
}

.coupon-item {
  display: flex;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.coupon-item.selected {
  border: 2rpx solid var(--accent-brown);
}

.coupon-item.disabled {
  opacity: 0.6;
}

.coupon-item.disabled .coupon-left {
  background: var(--gray-medium);
}

/* 左侧优惠信息 */
.coupon-left {
  width: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
}

.coupon-item.disabled .coupon-left {
  background: var(--gray-dark);
}

.coupon-value {
  text-align: center;
  margin-bottom: 15rpx;
}

.value-symbol {
  font-size: 32rpx;
  font-weight: bold;
}

.value-number {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.value-unit {
  font-size: 28rpx;
  font-weight: bold;
}

.coupon-conditions {
  font-size: 22rpx;
  opacity: 0.9;
  text-align: center;
}

/* 右侧详细信息 */
.coupon-right {
  flex: 1;
  padding: 30rpx;
  background: var(--white);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-info {
  flex: 1;
}

.coupon-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-dark);
  display: block;
  margin-bottom: 10rpx;
}

.coupon-desc {
  font-size: 24rpx;
  color: var(--text-light);
  display: block;
  margin-bottom: 15rpx;
}

.coupon-validity {
  font-size: 22rpx;
  color: var(--text-light);
}

/* 状态区域 */
.coupon-status {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.status-indicator {
  width: 40rpx;
  height: 40rpx;
  background: var(--accent-brown);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.status-indicator .iconfont {
  font-size: 24rpx;
}

.status-text {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 空状态 */
.empty-coupons {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-dark);
  display: block;
  margin-bottom: 15rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: var(--text-light);
  display: block;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid var(--gray-light);
  background: var(--white);
}

.modal-footer .btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.modal-footer .btn[disabled] {
  opacity: 0.6;
}