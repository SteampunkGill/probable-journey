/* components/address-picker/address-picker.wxss */
.address-picker {
  width: 100%;
}

/* 触发器 */
.default-trigger {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border: 2rpx solid var(--gray-light);
  border-radius: 10rpx;
  background: var(--white);
  min-height: 80rpx;
}

.default-trigger.has-value {
  border-color: var(--accent-brown);
  background: rgba(212, 165, 116, 0.05);
}

.trigger-text {
  font-size: 28rpx;
  color: var(--text-dark);
  flex: 1;
  margin-right: 20rpx;
}

.default-trigger:not(.has-value) .trigger-text {
  color: var(--text-light);
}

.default-trigger .iconfont {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 弹窗 */
.address-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.modal-mask {
  flex: 1;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background: var(--white);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid var(--gray-light);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-dark);
}

.modal-header .iconfont {
  font-size: 36rpx;
  color: var(--text-light);
}

/* 地址列表 */
.address-list {
  flex: 1;
  padding: 20rpx;
}

.address-item {
  padding: 25rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid var(--gray-light);
  border-radius: 15rpx;
  background: var(--white);
  transition: all 0.3s;
}

.address-item.selected {
  border-color: var(--accent-brown);
  background: rgba(212, 165, 116, 0.05);
}

.address-item:active {
  transform: scale(0.98);
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-right: 20rpx;
}

.address-phone {
  font-size: 26rpx;
  color: var(--text-light);
  flex: 1;
}

.address-tags {
  flex-shrink: 0;
}

.tag {
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.tag-default {
  background: var(--success);
  color: white;
}

.address-content {
  padding: 15rpx;
  background: var(--gray-light);
  border-radius: 8rpx;
}

.address-text {
  font-size: 26rpx;
  color: var(--text-dark);
  line-height: 1.5;
}

/* 空状态 */
.empty-address {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-dark);
  display: block;
  margin-bottom: 15rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: var(--text-light);
  display: block;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid var(--gray-light);
  background: var(--white);
}

.modal-footer .btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.modal-footer .btn[disabled] {
  opacity: 0.6;
}