<!-- components/quantity-selector/quantity-selector.wxml -->
<view class="quantity-selector">
  <button 
    class="btn-decrease {{disabled || value <= min ? 'disabled' : ''}}" 
    bindtap="decrease"
    disabled="{{disabled || value <= min}}"
  >
    <text class="iconfont icon-minus"></text>
  </button>
  
  <input 
    type="number" 
    class="input-quantity" 
    value="{{value}}" 
    disabled="{{disabled || !editable}}"
    bindinput="onInput"
    bindblur="onBlur"
  />
  
  <button 
    class="btn-increase {{disabled || value >= max ? 'disabled' : ''}}" 
    bindtap="increase"
    disabled="{{disabled || value >= max}}"
  >
    <text class="iconfont icon-add"></text>
  </button>
</view>