/* components/quantity-selector/quantity-selector.wxss */
.quantity-selector {
  display: flex;
  align-items: center;
  height: 60rpx;
}

.btn-decrease,
.btn-increase {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid var(--gray-light);
  border-radius: 50%;
  background: var(--white);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  transition: all 0.3s;
}

.btn-decrease::after,
.btn-increase::after {
  border: none;
}

.btn-decrease:active,
.btn-increase:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.btn-decrease.disabled,
.btn-increase.disabled {
  opacity: 0.5;
  background: var(--gray-light);
}

.btn-decrease.disabled:active,
.btn-increase.disabled:active {
  transform: none;
  opacity: 0.5;
}

.btn-decrease .iconfont,
.btn-increase .iconfont {
  font-size: 24rpx;
  color: var(--text-dark);
}

.btn-decrease.disabled .iconfont,
.btn-increase.disabled .iconfont {
  color: var(--gray-dark);
}

.input-quantity {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: var(--text-dark);
  border: none;
  background: transparent;
  margin: 0 15rpx;
}

.input-quantity[disabled] {
  opacity: 0.6;
}