/* components/product-card/product-card.wxss */
.product-card {
  background: var(--white);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(212, 165, 116, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
  position: relative;
}

.product-card:active {
  transform: translateY(-5rpx);
  box-shadow: 0 8rpx 30rpx rgba(212, 165, 116, 0.15);
}

.product-image-container {
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  transition: transform 0.5s;
}

.product-image-container:active .product-image {
  transform: scale(1.05);
}

.product-tags {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  display: inline-block;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  line-height: 1;
}

.tag-hot {
  background: #FFE4E1;
  color: #FF6B6B;
}

.tag-new {
  background: #E6F7FF;
  color: #1890FF;
}

.tag-discount {
  background: #F6FFED;
  color: #52C41A;
}

.favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.favorite-icon {
  width: 36rpx;
  height: 36rpx;
}

.favorite-btn:active {
  transform: scale(0.9);
}

.sold-out-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.sold-out-mask text {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  transform: rotate(-15deg);
}

.product-info {
  padding: 24rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-dark);
  display: block;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.product-desc {
  font-size: 24rpx;
  color: var(--text-light);
  line-height: 1.4;
  display: block;
  margin-bottom: 20rpx;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-section {
  display: flex;
  align-items: baseline;
}

.current-price {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--accent-brown);
  margin-right: 10rpx;
}

.original-price {
  font-size: 24rpx;
  color: var(--gray-dark);
  text-decoration: line-through;
}

.action-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.product-rating {
  display: flex;
  align-items: center;
  color: var(--warning);
  font-size: 24rpx;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.add-to-cart-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, var(--secondary-brown), var(--accent-brown));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(212, 165, 116, 0.3);
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
}

.add-to-cart-btn:active {
  transform: scale(0.9);
  opacity: 0.8;
}