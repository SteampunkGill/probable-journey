/**app.wxss - 全局样式 - 淡黄色+天蓝色暖色调 **/

/* ==================== 颜色系统 ==================== */

page {
  /* 主题色 - 淡黄色+天蓝色 */
  --primary-color: #FFD966;           /* 主色-淡黄色 */
  --primary-light: #FFE699;           /* 主色-浅黄 */
  --primary-dark: #FFCC33;            /* 主色-深黄 */
  
  --secondary-color: #87CEEB;         /* 辅助色-天蓝色 */
  --secondary-light: #B0E0F6;         /* 辅助色-浅蓝 */
  --secondary-dark: #5DADE2;          /* 辅助色-深蓝 */
  
  /* 背景色 - 暖色调 */
  --bg-primary: #FFFFFF;              /* 主背景-白色 */
  --bg-secondary: #FFFEF0;            /* 次背景-淡淡黄 */
  --bg-tertiary: #FFF9E6;             /* 三级背景-浅黄 */
  --bg-card: #FFFFFF;                 /* 卡片背景 */
  
  /* 文字颜色 */
  --text-primary: #333333;            /* 主要文字 */
  --text-secondary: #666666;          /* 次要文字 */
  --text-tertiary: #999999;           /* 辅助文字 */
  --text-placeholder: #CCCCCC;        /* 占位文字 */
  --text-white: #FFFFFF;              /* 白色文字 */
  
  /* 边框颜色 */
  --border-light: #FFF4CC;            /* 浅边框-淡黄 */
  --border-medium: #FFE699;           /* 中边框-黄 */
  --border-dark: #D4D4D4;             /* 深边框-灰 */
  
  /* 状态色 */
  --success: #52C41A;                 /* 成功-绿色 */
  --warning: #FAAD14;                 /* 警告-橙色 */
  --error: #FF6B6B;                   /* 错误-红色 */
  --info: #5DADE2;                    /* 信息-蓝色 */
  
  /* 渐变色 - 淡黄+天蓝 */
  --gradient-primary: linear-gradient(135deg, #FFD966 0%, #FFE699 100%);
  --gradient-secondary: linear-gradient(135deg, #87CEEB 0%, #B0E0F6 100%);
  --gradient-warm: linear-gradient(135deg, #FFE699 0%, #87CEEB 100%);
  --gradient-sunset: linear-gradient(135deg, #FFD966 0%, #FF9966 50%, #87CEEB 100%);
  
  /* 阴影 - 暖色调 */
  --shadow-sm: 0 2rpx 8rpx rgba(255, 217, 102, 0.15);
  --shadow-md: 0 4rpx 12rpx rgba(255, 217, 102, 0.2);
  --shadow-lg: 0 8rpx 24rpx rgba(255, 217, 102, 0.25);
  --shadow-xl: 0 12rpx 32rpx rgba(255, 217, 102, 0.3);
  
  /* 圆角 */
  --radius-xs: 4rpx;
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --radius-xl: 24rpx;
  --radius-round: 50%;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  
  /* 过渡 */
  --transition-fast: 0.2s ease;
  --transition-base: 0.3s ease;
  --transition-slow: 0.5s ease;
}

/* ==================== 全局重置 ==================== */

page {
  background-color: var(--bg-secondary);
  color: var(--text-primary);
  font-size: 28rpx;
  line-height: 1.6;
}

/* ==================== 通用组件样式 ==================== */

/* 按钮 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all var(--transition-fast);
}

.btn-primary {
  background: var(--gradient-primary);
  color: var(--text-primary);
  box-shadow: var(--shadow-md);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

.btn-secondary {
  background: var(--gradient-secondary);
  color: var(--text-white);
  box-shadow: var(--shadow-md);
}

.btn-text {
  background: transparent;
  color: var(--primary-color);
  padding: 10rpx 20rpx;
}

.btn-disabled {
  background: var(--border-light);
  color: var(--text-tertiary);
  box-shadow: none;
}

/* 卡片 */
.card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: 30rpx;
  box-shadow: var(--shadow-sm);
  margin-bottom: 20rpx;
}

/* 标签 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 22rpx;
  font-weight: 500;
}

.tag-primary {
  background: rgba(255, 217, 102, 0.2);
  color: var(--primary-dark);
}

.tag-secondary {
  background: rgba(135, 206, 235, 0.2);
  color: var(--secondary-dark);
}

.tag-success {
  background: rgba(82, 196, 26, 0.1);
  color: var(--success);
}

.tag-warning {
  background: rgba(250, 173, 20, 0.1);
  color: var(--warning);
}

.tag-error {
  background: rgba(255, 107, 107, 0.1);
  color: var(--error);
}

/* 徽章 */
.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: var(--error);
  color: var(--text-white);
  font-size: 20rpx;
  text-align: center;
  border-radius: 16rpx;
  padding: 0 8rpx;
  font-weight: bold;
  border: 3rpx solid var(--bg-primary);
}

/* 输入框 */
.input {
  width: 100%;
  padding: 20rpx 30rpx;
  background: var(--bg-primary);
  border: 2rpx solid var(--border-medium);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  color: var(--text-primary);
  transition: all var(--transition-fast);
}

.input:focus {
  border-color: var(--primary-color);
  background: var(--bg-secondary);
}

/* 复选框 */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid var(--border-dark);
  border-radius: var(--radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-fast);
}

.checkbox.checked {
  border-color: var(--primary-color);
  background: var(--gradient-primary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

/* ==================== 动画 ==================== */

.fade-in {
  animation: fadeIn 0.3s ease;
}

.slide-up {
  animation: slideUp 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes spin {
  to { 
    transform: rotate(360deg); 
  }
}

/* ==================== 工具类 ==================== */

/* 文字颜色 */
.text-primary { color: var(--text-primary); }
.text-secondary { color: var(--text-secondary); }
.text-tertiary { color: var(--text-tertiary); }
.text-white { color: var(--text-white); }
.text-brand { color: var(--primary-color); }
.text-blue { color: var(--secondary-color); }

/* 背景颜色 */
.bg-primary { background: var(--bg-primary); }
.bg-secondary { background: var(--bg-secondary); }
.bg-yellow { background: var(--gradient-primary); }
.bg-blue { background: var(--gradient-secondary); }

/* 字重 */
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-bold { font-weight: 700; }

/* 字号 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }

/* 间距 */
.p-xs { padding: var(--spacing-xs); }
.p-sm { padding: var(--spacing-sm); }
.p-md { padding: var(--spacing-md); }
.p-lg { padding: var(--spacing-lg); }

.m-xs { margin: var(--spacing-xs); }
.m-sm { margin: var(--spacing-sm); }
.m-md { margin: var(--spacing-md); }
.m-lg { margin: var(--spacing-lg); }

/* 圆角 */
.rounded-sm { border-radius: var(--radius-sm); }
.rounded-md { border-radius: var(--radius-md); }
.rounded-lg { border-radius: var(--radius-lg); }
.rounded-xl { border-radius: var(--radius-xl); }

/* 阴影 */
.shadow-sm { box-shadow: var(--shadow-sm); }
.shadow-md { box-shadow: var(--shadow-md); }
.shadow-lg { box-shadow: var(--shadow-lg); }

/* Flex布局 */
.flex { display: flex; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
