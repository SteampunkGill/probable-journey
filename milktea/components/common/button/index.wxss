.custom-btn {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0;
  text-align: center;
  vertical-align: middle;
  -webkit-appearance: none;
  transition: opacity 0.2s;
  border: 2rpx solid transparent;
  font-weight: 600;
}

.custom-btn::after {
  border: none;
}

.custom-btn:active:not(.btn-disabled) {
  opacity: 0.8;
  transform: scale(0.98);
}

/* Types */
.btn-primary {
  background: var(--primary-color);
  color: #ffffff;
}

.btn-secondary {
  background: var(--surface-color);
  color: var(--primary-dark);
  border-color: var(--border-color);
}

.btn-danger {
  background: #ff6b6b;
  color: #ffffff;
}

.btn-warning {
  background: #ff9800;
  color: #ffffff;
}

/* Sizes */
.btn-normal {
  height: 88rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
}

.btn-large {
  height: 100rpx;
  padding: 0 48rpx;
  font-size: 36rpx;
}

.btn-small {
  height: 64rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.btn-mini {
  height: 48rpx;
  padding: 0 16rpx;
  font-size: 20rpx;
}

/* Shapes */
.btn-round {
  border-radius: 999rpx;
}

.btn-square {
  border-radius: 0;
}

/* Plain */
.btn-plain.btn-primary {
  background: transparent;
  color: var(--primary-color);
  border-color: var(--primary-color);
}

/* Block */
.btn-block {
  display: flex;
  width: 100% !important;
}

/* Disabled */
.btn-disabled {
  opacity: 0.5;
  cursor: not-allowed;
}