.address-picker {
  width: 100%;
}

.default-trigger {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-sm);
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  border: 1rpx solid var(--border-color);
}

.trigger-text {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.has-value .trigger-text {
  color: var(--primary-color);
  font-weight: 500;
}

/* 弹窗样式 */
.address-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f5f0e1;
  border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: var(--spacing-lg) var(--spacing-md);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.icon-close {
  font-size: 40rpx;
  color: var(--text-color-medium);
  padding: 10rpx;
}

.address-list {
  flex: 1;
  padding: var(--spacing-md);
}

.address-item {
  padding: var(--spacing-md);
  border: 1rpx solid var(--border-color);
  border-radius: var(--border-radius-lg);
  margin-bottom: var(--spacing-sm);
  background: #ffffff;
}

.address-item.selected {
  border-color: var(--primary-color);
  background: rgba(160, 82, 45, 0.05);
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  gap: 16rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: 600;
}

.address-phone {
  font-size: 26rpx;
  color: var(--text-color-medium);
}

.tag-default {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 4rpx;
}

.address-content {
  font-size: 26rpx;
  color: var(--text-color-medium);
}

.modal-footer {
  padding: var(--spacing-lg) var(--spacing-md);
  display: flex;
  gap: 16rpx;
  border-top: 1rpx solid var(--border-color);
}

.btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: var(--border-radius-lg);
}

.btn-secondary {
  background: #ffffff;
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
}

.btn-primary {
  background: var(--primary-color);
  color: #ffffff;
}