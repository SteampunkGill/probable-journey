.quantity-selector {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: var(--border-radius-md);
  padding: 4rpx;
  border: 1rpx solid var(--border-color);
  width: fit-content;
}

.btn-decrease,
.btn-increase {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: var(--border-radius-sm);
  color: var(--text-color-dark);
  transition: all 0.3s ease;
}

.btn-decrease.disabled,
.btn-increase.disabled {
  color: var(--text-color-light);
  background: #f5f5f5;
}

.icon {
  font-size: 36rpx;
  font-weight: bold;
}

.input-quantity {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
}