.region-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
}

.picker-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

.picker-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #f5f0e1;
  border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
  display: flex;
  flex-direction: column;
  height: 600rpx;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  background: #ffffff;
  border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
}

.cancel, .confirm {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.cancel {
  color: var(--text-color-medium);
}

.confirm {
  color: var(--primary-color);
  font-weight: 600;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.picker-body {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.column {
  flex: 1;
  height: 100%;
  border-right: 1rpx solid var(--border-color);
}

.column:last-child {
  border-right: none;
}

.item {
  padding: 24rpx 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: var(--text-color-medium);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.item.active {
  color: var(--primary-color);
  background: rgba(160, 82, 45, 0.05);
  font-weight: 600;
}