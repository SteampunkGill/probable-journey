<view class="region-picker" wx:if="{{show}}">
  <view class="picker-mask" bindtap="onCancel"></view>
  <view class="picker-content">
    <view class="picker-header">
      <text class="cancel" bindtap="onCancel">取消</text>
      <text class="title">选择地区</text>
      <text class="confirm" bindtap="onConfirm">确定</text>
    </view>
    <view class="picker-body">
      <!-- 省 -->
      <scroll-view scroll-y class="column">
        <view 
          wx:for="{{provinces}}" 
          wx:key="name" 
          class="item {{selectedProvince === item.name ? 'active' : ''}}" 
          bindtap="onProvinceChange"
          data-province="{{item}}"
        >
          {{item.name}}
        </view>
      </scroll-view>
      <!-- 市 -->
      <scroll-view scroll-y class="column">
        <view 
          wx:for="{{cities}}" 
          wx:key="name" 
          class="item {{selectedCity === item.name ? 'active' : ''}}" 
          bindtap="onCityChange"
          data-city="{{item}}"
        >
          {{item.name}}
        </view>
      </scroll-view>
      <!-- 区 -->
      <scroll-view scroll-y class="column">
        <view 
          wx:for="{{districts}}" 
          wx:key="*this" 
          class="item {{selectedDistrict === item ? 'active' : ''}}" 
          bindtap="onDistrictChange"
          data-district="{{item}}"
        >
          {{item}}
        </view>
      </scroll-view>
    </view>
  </view>
</view>