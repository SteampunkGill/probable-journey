.coupon-selector {
  width: 100%;
}

.default-trigger {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-sm);
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  border: 1rpx solid var(--border-color);
}

.trigger-content {
  display: flex;
  flex-direction: column;
}

.trigger-text {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.has-value .trigger-text {
  color: var(--primary-color);
  font-weight: 600;
}

.trigger-desc {
  font-size: 24rpx;
  color: var(--accent-pink);
}

/* 弹窗样式 */
.coupon-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f5f0e1;
  border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: var(--spacing-lg) var(--spacing-md);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.icon-close {
  font-size: 40rpx;
  color: var(--text-color-medium);
  padding: 10rpx;
}

.coupon-list {
  flex: 1;
  padding: var(--spacing-md);
}

.coupon-item {
  display: flex;
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  margin-bottom: var(--spacing-sm);
  overflow: hidden;
  border: 2rpx solid var(--border-color);
}

.coupon-item.selected {
  border-color: var(--primary-color);
}

.coupon-item.disabled {
  opacity: 0.5;
}

.coupon-left {
  width: 180rpx;
  background: var(--primary-color);
  color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-md);
}

.coupon-value {
  display: flex;
  align-items: baseline;
}

.value-number {
  font-size: 48rpx;
  font-weight: 700;
}

.coupon-right {
  flex: 1;
  padding: var(--spacing-md);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coupon-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.coupon-name {
  font-size: 28rpx;
  font-weight: 600;
}

.coupon-desc {
  font-size: 22rpx;
  color: var(--text-color-medium);
}

.coupon-validity {
  font-size: 20rpx;
  color: var(--text-color-light);
}

.modal-footer {
  padding: var(--spacing-lg) var(--spacing-md);
  border-top: 1rpx solid var(--border-color);
}

.btn-primary {
  background: var(--primary-color);
  color: #ffffff;
  border-radius: var(--border-radius-lg);
}