.favorite-page {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: 40rpx;
}

.top-bar {
  background: #ffffff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: var(--shadow-sm);
}

.count-text {
  font-size: 28rpx;
  color: var(--text-color-dark);
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 28rpx;
  color: var(--primary-color);
  padding: 10rpx 20rpx;
}

.favorite-list {
  padding: 20rpx;
}

.favorite-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-sm);
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color-dark);
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 24rpx;
  color: var(--text-color-medium);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.product-sales {
  font-size: 22rpx;
  color: var(--text-color-light);
}

.product-actions {
  display: flex;
  align-items: center;
}

.remove-icon {
  font-size: 40rpx;
  padding: 10rpx;
}

.add-icon {
  font-size: 40rpx;
  padding: 10rpx;
  color: var(--primary-color);
}

.load-more, .no-more {
  text-align: center;
  padding: 30rpx;
  color: var(--text-color-medium);
  font-size: 26rpx;
}

.empty-state {
  padding-top: 200rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.2;
}

.empty-text {
  font-size: 30rpx;
  color: var(--text-color-medium);
  margin-bottom: 60rpx;
}

.go-shopping-btn {
  width: 240rpx;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.loading-state {
  padding-top: 200rpx;
  text-align: center;
  color: var(--text-color-medium);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  margin: 0 auto 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}