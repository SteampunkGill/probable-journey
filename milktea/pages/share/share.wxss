.share-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 32rpx;
}

/* 卡片通用样式 */
.card {
  background: white;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 69, 19, 0.12);
  border: 2rpx solid var(--border-color);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(to right, #ffc0cb, var(--primary-color), #deb887);
}

/* 分享横幅 */
.share-banner {
  padding: 0;
  height: 320rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(160, 82, 45, 0.6);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  text-align: center;
  padding: 32rpx;
}

.banner-title {
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.banner-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 区域标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 32rpx;
  color: var(--primary-dark);
  padding-left: 24rpx;
  border-left: 8rpx solid var(--primary-color);
}

/* 奖励统计 */
.reward-stats {
  display: flex;
  justify-content: space-around;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: var(--accent-cream);
  border-radius: 24rpx;
  flex: 1;
}

.stat-item .value {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: var(--text-color-medium);
}

/* 分享操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 24rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  flex: 1;
  background: var(--accent-cream);
  margin: 0 !important;
  line-height: 1.4 !important;
  width: auto !important;
}

.icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.icon-wrapper.wechat {
  background: linear-gradient(135deg, #07C160, #05A854);
}

.icon-wrapper.poster {
  background: linear-gradient(135deg, #FF9800, #F57C00);
}

.icon-wrapper.link {
  background: linear-gradient(135deg, #2196F3, #1976D2);
}

.action-btn text {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-color-dark);
}

/* 规则列表 */
.rules-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  font-size: 26rpx;
  color: var(--text-color-medium);
  line-height: 1.6;
  padding: 16rpx 24rpx;
  background: var(--accent-cream);
  border-radius: 16rpx;
  border-left: 8rpx solid var(--primary-light);
}