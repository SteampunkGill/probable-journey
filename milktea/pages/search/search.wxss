.search-page {
  min-height: 100vh;
  background: var(--background-color);
}

.search-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  flex: 1;
  height: 72rpx;
  background: #ffffff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
}

.search-input-wrapper input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color-dark);
}

.close-icon {
  font-size: 24rpx;
  color: var(--text-color-light);
  padding: 10rpx;
}

.search-action {
  width: 72rpx;
  height: 72rpx;
  background: #ffffff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-icon {
  font-size: 32rpx;
  color: var(--primary-color);
}

.search-history, .hot-search {
  background: #ffffff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 24rpx;
}

.history-header, .hot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.history-title, .hot-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color-dark);
}

.delete-icon {
  font-size: 32rpx;
  color: var(--text-color-light);
}

.history-tags, .hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag, .hot-tag {
  background: #f5f5f5;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--text-color-medium);
}

.hot-tag.hot {
  color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
}

.search-tabs {
  display: flex;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: var(--text-color-medium);
  border-radius: 16rpx;
}

.tab-item.active {
  color: #ffffff;
  background: var(--primary-color);
}

.results-header {
  background: #ffffff;
  padding: 20rpx 30rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}

.sort-options {
  display: flex;
  gap: 40rpx;
}

.sort-option {
  font-size: 26rpx;
  color: var(--text-color-medium);
}

.sort-option.active {
  color: var(--primary-color);
  font-weight: bold;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.store-list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.store-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.store-item:last-child {
  border-bottom: none;
}

.store-info {
  flex: 1;
}

.store-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.store-address {
  font-size: 24rpx;
  color: var(--text-color-medium);
  margin-bottom: 10rpx;
}

.store-status {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.status-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-tag.OPEN {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.status-tag.CLOSED {
  background: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

.distance {
  font-size: 22rpx;
  color: var(--text-color-light);
}

.go-btn {
  background: var(--primary-color);
  color: #ffffff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.empty-results {
  padding: 100rpx 0;
  text-align: center;
  color: var(--text-color-light);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.2;
}