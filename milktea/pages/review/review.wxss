.review-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 20rpx;
  padding-bottom: 160rpx;
}

.loading {
  padding-top: 200rpx;
  text-align: center;
  color: var(--text-color-medium);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  margin: 0 auto 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: var(--shadow-sm);
}

.goods-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}

.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.goods-specs {
  font-size: 22rpx;
  color: var(--text-color-light);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color-dark);
}

.stars {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.star {
  font-size: 60rpx;
  color: #ddd;
}

.star.active {
  color: #ffb347;
}

.score-text {
  font-size: 26rpx;
  color: var(--primary-color);
  margin-left: 20rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.word-count {
  text-align: right;
  font-size: 22rpx;
  color: var(--text-color-light);
  margin-top: 10rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item, .upload-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn {
  border: 2rpx dashed var(--border-color);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--text-color-light);
}

.upload-btn .plus {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.upload-btn .text {
  font-size: 22rpx;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: var(--text-color-medium);
}

.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  height: 100rpx;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}

.submit-btn[disabled] {
  background: #ccc;
}

.appeal-section {
  margin-top: 40rpx;
  text-align: center;
}

.appeal-btn {
  background: transparent;
  color: var(--text-color-medium);
  font-size: 24rpx;
  border: none;
  text-decoration: underline;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-container {
  width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  font-weight: bold;
}

.close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  font-size: 26rpx;
  color: var(--text-color-medium);
  display: block;
  margin-bottom: 16rpx;
}

.picker-value {
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.form-item textarea {
  height: 160rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 20rpx;
}

.amount {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.modal-footer {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: var(--primary-color);
  color: #ffffff;
}