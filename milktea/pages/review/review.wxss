.review-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 32rpx;
  padding-bottom: 180rpx;
  color: var(--text-color-dark);
}

.loading {
  padding-top: 240rpx;
  text-align: center;
  color: var(--text-color-medium);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--accent-cream);
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  margin: 0 auto 32rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.card {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  margin-bottom: 32rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-color);
}

.goods-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--border-radius-md);
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.goods-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.goods-specs {
  font-size: 24rpx;
  color: var(--text-color-medium);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: var(--primary-dark);
}

.stars {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.star {
  font-size: 60rpx;
  color: var(--border-color);
}

.star.active {
  color: #ffb347;
}

.score-text {
  font-size: 28rpx;
  color: var(--primary-color);
  margin-left: 16rpx;
}

textarea {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: var(--text-color-medium);
  margin-top: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.image-item, .upload-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--border-radius-md);
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: var(--border-radius-md);
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn {
  border: 2rpx dashed var(--border-color);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--text-color-medium);
}

.upload-btn .plus {
  font-size: 48rpx;
}

.upload-btn .text {
  font-size: 24rpx;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
}

.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  height: 100rpx;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.appeal-section {
  margin-top: 40rpx;
  text-align: center;
}

.appeal-btn {
  background: transparent;
  color: var(--text-color-medium);
  border: 1rpx solid var(--border-color);
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: inline-block;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-container {
  width: 85%;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
}

.close {
  font-size: 48rpx;
  color: #999;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-color-medium);
  margin-bottom: 16rpx;
}

.picker-value {
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.form-item textarea {
  height: 160rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 16rpx;
}

.amount {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.modal-footer button {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: var(--primary-color);
  color: #ffffff;
}