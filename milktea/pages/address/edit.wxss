.edit-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f0e1 0%, #f8f4e6 100%);
  padding-bottom: 200rpx;
}

.form {
  padding: 48rpx 32rpx;
}

.form-section {
  background: #fff8dc;
  border-radius: 48rpx;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(160, 82, 45, 0.08);
  border: 4rpx solid #e8dccb;
}

.section-title {
  display: block;
  padding: 40rpx 0 32rpx;
  font-size: 34rpx;
  color: #a0522d;
  font-weight: 600;
  letter-spacing: 0.02em;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 44rpx 0;
  border-bottom: 4rpx dashed #d4c7b5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.textarea-item {
  align-items: flex-start;
}

.label {
  flex-shrink: 0;
  width: 200rpx;
  font-size: 32rpx;
  color: #4a3b30;
  font-weight: 500;
}

.label.required::before {
  content: 'âœ¦';
  color: #ff6b6b;
  margin-right: 12rpx;
  font-size: 28rpx;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #4a3b30;
  height: 44rpx;
}

.textarea {
  flex: 1;
  width: 100%;
  min-height: 200rpx;
  font-size: 32rpx;
  color: #4a3b30;
  padding: 24rpx 0;
  line-height: 1.6;
}

.region-display {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.region-text {
  font-size: 32rpx;
  color: #4a3b30;
  font-weight: 500;
}

.placeholder {
  font-size: 32rpx;
  color: #a09080;
  opacity: 0.7;
}

.arrow {
  font-size: 56rpx;
  color: #d2b48c;
  margin-left: 24rpx;
  opacity: 0.8;
}

.label-options {
  display: flex;
  gap: 32rpx;
  padding-bottom: 48rpx;
}

.label-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  border: 4rpx solid #deb887;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #7a6a5b;
  background: rgba(255, 255, 255, 0.7);
  transition: all 0.3s;
}

.label-item.active {
  border-color: #a0522d;
  background: linear-gradient(135deg, #ffc0cb, #fff8dc);
  color: #a0522d;
  font-weight: 600;
  box-shadow: 0 16rpx 40rpx rgba(160, 82, 45, 0.2);
  transform: translateY(-6rpx);
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(245, 240, 225, 0.95);
  padding: 40rpx 48rpx;
  display: flex;
  gap: 32rpx;
  box-shadow: 0 -16rpx 60rpx rgba(160, 82, 45, 0.1);
  border-top: 4rpx solid #e8dccb;
}

.delete-btn {
  flex: 1;
  padding: 36rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #ff6b6b;
  border: 4rpx solid rgba(255, 107, 107, 0.3);
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 600;
  line-height: 1;
}

.save-btn {
  flex: 2;
  padding: 36rpx;
  background: linear-gradient(135deg, #a0522d, #8b4513);
  color: #fff8dc;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  line-height: 1;
  box-shadow: 0 12rpx 40rpx rgba(160, 82, 45, 0.3);
}

.save-btn.disabled {
  opacity: 0.6;
  background: linear-gradient(135deg, #d2b48c, #deb887);
}