.address-page {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: 120rpx;
}

.address-tabs {
  display: flex;
  background: var(--surface-color);
  padding: 24rpx 40rpx;
  margin-bottom: 32rpx;
  border-radius: 0 0 50rpx 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(160, 82, 45, 0.08);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 32rpx;
  color: var(--text-color-medium);
  font-weight: 500;
  position: relative;
  border-radius: 40rpx;
  margin: 0 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
  background: rgba(255, 248, 220, 0.4);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(160, 82, 45, 0.15);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 8rpx;
  background: var(--accent-cream);
  border-radius: 4rpx;
}

.address-list {
  padding: 40rpx;
}

.address-item {
  position: relative;
  background: var(--surface-color);
  border-radius: 50rpx;
  padding: 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(160, 82, 45, 0.1);
  border: 4rpx solid var(--border-color);
  transition: all 0.3s;
  overflow: hidden;
}

.address-item.selectable {
  padding-right: 140rpx;
}

.default-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: var(--accent-cream);
  padding: 16rpx 40rpx;
  border-radius: 0 50rpx 0 60rpx;
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  box-shadow: 0 8rpx 20rpx rgba(139, 69, 19, 0.2);
}

.status-tag {
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  background: rgba(222, 184, 135, 0.15);
  color: var(--accent-brown);
  font-weight: 500;
  margin-left: 20rpx;
}

.status-tag.open {
  background: rgba(255, 192, 203, 0.2);
  color: var(--accent-pink);
}

.store-meta {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.distance, .hours {
  font-size: 28rpx;
  color: var(--primary-color);
  opacity: 0.9;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.address-info {
  margin-bottom: 40rpx;
}

.name-phone {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.name {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-color-dark);
  letter-spacing: 0.6rpx;
}

.phone {
  font-size: 32rpx;
  color: var(--primary-color);
  opacity: 0.9;
  font-weight: 500;
}

.address-detail {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.tag {
  flex-shrink: 0;
  padding: 12rpx 28rpx;
  background: rgba(255, 192, 203, 0.15);
  color: var(--accent-pink);
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 2rpx solid rgba(255, 192, 203, 0.3);
}

.detail {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-color-dark);
  line-height: 1.7;
  opacity: 0.9;
}

.address-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 40rpx;
  border-top: 4rpx dashed var(--border-color);
}

.action-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-label {
  font-size: 30rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.action-right {
  display: flex;
  gap: 32rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.action-btn.edit {
  background: rgba(255, 192, 203, 0.2);
  color: var(--accent-pink);
  border: 4rpx solid rgba(255, 192, 203, 0.4);
}

.action-btn.delete {
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
  border: 4rpx solid rgba(255, 107, 107, 0.2);
}

.selected-mark {
  position: absolute;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 30rpx rgba(160, 82, 45, 0.3);
}

.selected-mark .icon {
  color: var(--accent-cream);
  font-size: 48rpx;
  font-weight: bold;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 240rpx 0;
}

.empty-icon {
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 56rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--primary-color);
  opacity: 0.7;
  font-weight: 500;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(245, 240, 225, 0.95);
  padding: 40rpx 48rpx;
  box-shadow: 0 -12rpx 40rpx rgba(160, 82, 45, 0.1);
  border-radius: 60rpx 60rpx 0 0;
}

.add-btn {
  width: 100%;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: var(--accent-cream);
  border-radius: 60rpx;
  padding: 40rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  letter-spacing: 1rpx;
  box-shadow: 0 16rpx 40rpx rgba(160, 82, 45, 0.25);
}