.settings-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: var(--spacing-md);
}

.settings-list {
  margin-bottom: var(--spacing-lg);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
  background: #ffffff;
}

.setting-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: var(--text-color-dark);
  font-weight: 600;
}

.value {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.icon-right {
  color: var(--primary-light);
  font-size: 32rpx;
}

.logout-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #ffffff;
  color: #ff6b6b;
  border: 2rpx solid rgba(255, 107, 107, 0.3);
  border-radius: var(--border-radius-xl);
  font-size: 32rpx;
  font-weight: 600;
  margin-top: var(--spacing-xl);
  text-align: center;
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-dark);
}

.setting-item-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) 0;
}