.about-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 32rpx;
}

.card {
  background: white;
  border-radius: 48rpx;
  padding: 64rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 69, 19, 0.12);
  border: 2rpx solid var(--border-color);
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 64rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.brand-name {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-dark);
  margin-bottom: 16rpx;
}

.version {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.intro-section {
  margin-bottom: 64rpx;
  line-height: 1.6;
  color: var(--text-color-dark);
  text-align: justify;
  font-size: 30rpx;
}

.info-list {
  border-top: 2rpx solid var(--border-color);
  padding-top: 48rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0;
  font-size: 30rpx;
}

.info-item .label {
  color: var(--text-color-medium);
}

.info-item .value {
  color: var(--primary-color);
  font-weight: 500;
}

.footer-text {
  text-align: center;
  margin-top: 64rpx;
  font-size: 24rpx;
  color: var(--text-color-light);
}