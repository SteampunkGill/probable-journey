<view class="change-password-page">
  <view class="form-card card">
    <view class="form-item">
      <text class="label">旧密码</text>
      <input 
        password 
        value="{{oldPassword}}" 
        bindinput="onInput" data-key="oldPassword"
        placeholder="请输入旧密码"
      />
    </view>
    <view class="form-item">
      <text class="label">新密码</text>
      <input 
        password 
        value="{{newPassword}}" 
        bindinput="onInput" data-key="newPassword"
        placeholder="请输入新密码"
      />
    </view>
    <view class="form-item">
      <text class="label">确认新密码</text>
      <input 
        password 
        value="{{confirmPassword}}" 
        bindinput="onInput" data-key="confirmPassword"
        placeholder="请再次输入新密码"
      />
    </view>
  </view>

  <button 
    class="submit-btn" 
    disabled="{{loading}}" 
    bindtap="handleSubmit"
  >
    {{ loading ? '提交中...' : '确认修改' }}
  </button>
</view>