.pickup-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 32rpx;
  color: var(--text-color-dark);
}

.loading {
  padding-top: 240rpx;
  text-align: center;
  color: var(--text-color-medium);
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--accent-cream);
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  margin: 0 auto 32rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Pickup Card */
.pickup-card {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: 40rpx;
  box-shadow: var(--shadow-md);
  margin-bottom: 40rpx;
  border: 1rpx solid var(--border-color);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.status-badge {
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-badge.READY {
  background: #e6f7ff;
  color: #1890ff;
}

.status-badge.MAKING {
  background: #fff7e6;
  color: #fa8c16;
}

.order-no {
  font-size: 24rpx;
  color: var(--text-color-medium);
}

.pickup-code-section {
  text-align: center;
  padding: 40rpx 0;
  border-bottom: 2rpx dashed var(--border-color);
  margin-bottom: 40rpx;
}

.pickup-code-section .label {
  font-size: 28rpx;
  color: var(--text-color-medium);
  display: block;
  margin-bottom: 16rpx;
}

.pickup-code {
  font-size: 80rpx;
  font-weight: bold;
  color: var(--primary-color);
  display: block;
  letter-spacing: 8rpx;
}

.pickup-code-section .hint {
  font-size: 24rpx;
  color: var(--text-color-light);
  margin-top: 16rpx;
  display: block;
}

.info-item {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.info-item .icon {
  font-size: 36rpx;
}

.info-detail {
  display: flex;
  flex-direction: column;
}

.store-name {
  font-size: 30rpx;
  font-weight: bold;
}

.store-address {
  font-size: 24rpx;
  color: var(--text-color-medium);
}

.time-label {
  font-size: 24rpx;
  color: var(--text-color-medium);
}

.time-value {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.order-items {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #f0f0f0;
}

.items-header {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.item-count {
  color: var(--text-color-medium);
  font-weight: normal;
}

.item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
}

.item-specs {
  font-size: 22rpx;
  color: var(--text-color-medium);
}

.item-quantity {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.card-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: #f5f5f5;
  color: #333;
  border: none;
}

.action-btn.primary {
  background: var(--primary-color);
  color: #ffffff;
}

/* Other Orders */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.order-list {
  display: flex;
  gap: 24rpx;
  overflow-x: auto;
  padding-bottom: 16rpx;
}

.order-item {
  flex-shrink: 0;
  width: 240rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
}

.order-item.active {
  border-color: var(--primary-color);
  background: #fff9f5;
}

.pickup-code-small {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.order-item .status {
  font-size: 20rpx;
  color: var(--text-color-medium);
  float: right;
}

.order-item .order-no {
  display: block;
  margin-top: 8rpx;
  font-size: 20rpx;
}

/* Scan Section */
.scan-section {
  margin: 60rpx 0;
  text-align: center;
}

.scan-btn {
  width: 320rpx;
  height: 100rpx;
  background: #ffffff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin: 0 auto 16rpx;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-color);
}

.scan-btn .icon {
  font-size: 40rpx;
}

.scan-btn .text {
  font-size: 32rpx;
  font-weight: bold;
}

.scan-hint {
  font-size: 24rpx;
  color: var(--text-color-medium);
}

/* History Section */
.history-list {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  overflow: hidden;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.pickup-code-text {
  font-size: 32rpx;
  font-weight: bold;
}

.order-no-text {
  font-size: 22rpx;
  color: var(--text-color-medium);
}

.picked-time {
  font-size: 22rpx;
  color: var(--text-color-light);
}

.history-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.amount {
  font-size: 30rpx;
  font-weight: bold;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* Empty State */
.empty-state {
  padding-top: 200rpx;
  text-align: center;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-color-medium);
  margin-bottom: 48rpx;
}

.go-order-btn {
  width: 240rpx;
  height: 80rpx;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin: 0 auto;
}