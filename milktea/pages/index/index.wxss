.page-container {
  height: 100vh;
  background: #f5f0e1;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索栏 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: transparent;
  transition: all 0.3s ease-out;
}

.search-bar.shadow {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 4rpx 20rpx rgba(160, 82, 45, 0.08);
}

.search-box {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  gap: 16rpx;
}

.search-bar.shadow .search-box {
  background: #fff8dc;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #7a6a5b;
}

.scan-btn {
  width: 56rpx;
  height: 56rpx;
}

.main-content {
  flex: 1;
  padding-top: 120rpx;
}

/* 通知栏 */
.notification-bar {
  margin: 0 24rpx 20rpx;
  background: linear-gradient(135deg, #fff8dc 0%, #fff 100%);
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid var(--primary-light);
}

.notification-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.notice-icon {
  width: 32rpx;
  height: 32rpx;
}

.notice-text {
  font-size: 26rpx;
  color: var(--primary-dark);
}

.close-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.5;
}

/* 轮播图 */
.banner-container {
  height: 360rpx;
  margin: 24rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 25rpx rgba(160, 82, 45, 0.12);
}

.banner-swiper {
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 门店选择 */
.store-selector-section {
  margin: 24rpx;
  background: #e8dccb;
  padding: 24rpx;
  border-radius: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(160, 82, 45, 0.08);
}

.current-store {
  flex: 1;
}

.store-main {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-icon {
  width: 48rpx;
  height: 48rpx;
}

.store-info-content {
  flex: 1;
}

.store-name-wrapper {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 4rpx;
}

.store-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #4a3b30;
}

.store-distance {
  font-size: 24rpx;
  color: #deb887;
}

.store-address-text {
  font-size: 24rpx;
  color: #7a6a5b;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.location-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding-left: 24rpx;
  border-left: 2rpx solid #d4c7b5;
}

.re-location-icon {
  width: 40rpx;
  height: 40rpx;
}

.rotating {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.location-action text {
  font-size: 20rpx;
  color: #7a6a5b;
}

/* 点餐方式 */
.order-mode-section {
  margin: 0 24rpx 24rpx;
  background: white;
  padding: 32rpx;
  border-radius: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(160, 82, 45, 0.08);
}

.mode-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  color: #4a3b30;
}

.mode-buttons {
  display: flex;
  gap: 24rpx;
}

.mode-card {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 24rpx;
  gap: 16rpx;
}

.mode-card.delivery {
  background: #fff8dc;
}

.mode-card.pickup {
  background: #f5f5f5;
}

.mode-icon {
  width: 80rpx;
  height: 80rpx;
}

.mode-name {
  font-size: 28rpx;
  font-weight: 700;
  display: block;
  color: #4a3b30;
}

.mode-desc {
  font-size: 22rpx;
  color: #7a6a5b;
}

/* 快捷入口 */
.quick-menu {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background: white;
  margin: 0 24rpx 24rpx;
  border-radius: 32rpx;
  box-shadow: 0 6rpx 20rpx rgba(160, 82, 45, 0.08);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.menu-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: #fff8dc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
}

.menu-name {
  font-size: 24rpx;
  color: #4a3b30;
  font-weight: 600;
}

.coupon-badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  background: #ff4d4f;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  border: 4rpx solid white;
}

/* 区块标题 */
.section {
  margin: 0 24rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #4a3b30;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #7a6a5b;
}

/* 推荐商品 */
.recommend-scroll {
  width: 100%;
  white-space: nowrap;
}

.recommend-list {
  display: inline-flex;
  gap: 24rpx;
  padding-bottom: 10rpx;
}

.recommend-item {
  width: 280rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(160, 82, 45, 0.08);
}

.recommend-image {
  width: 280rpx;
  height: 280rpx;
}

.recommend-info {
  padding: 16rpx;
}

.recommend-name {
  font-size: 26rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
  color: #4a3b30;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommend-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recommend-price {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 700;
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 今日热门 */
.hot-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hot-item {
  display: flex;
  background: white;
  padding: 24rpx;
  border-radius: 24rpx;
  gap: 24rpx;
  box-shadow: 0 4rpx 15rpx rgba(160, 82, 45, 0.08);
}

.hot-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
}

.hot-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hot-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #4a3b30;
}

.hot-desc {
  font-size: 24rpx;
  color: #7a6a5b;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.hot-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hot-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.hot-price {
  font-size: 32rpx;
  color: var(--primary-color);
  font-weight: 700;
}

.hot-sales {
  font-size: 22rpx;
  color: #deb887;
}

/* 附近门店卡片 */
.store-card {
  background: white;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(160, 82, 45, 0.08);
}

.store-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.store-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.store-status.open {
  background: #e6f7ff;
  color: #1890ff;
}

.store-status.closed {
  background: #fff1f0;
  color: #ff4d4f;
}

.store-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #7a6a5b;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
}

.store-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.store-call {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--primary-color);
  font-size: 26rpx;
  font-weight: 600;
  background: rgba(160, 82, 45, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
}

.call-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 购物车浮动按钮 */
.cart-float {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 110rpx;
  height: 110rpx;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(160, 82, 45, 0.4);
  transform: scale(0);
  transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  z-index: 99;
}

.cart-float.show {
  transform: scale(1);
}

.cart-icon {
  width: 56rpx;
  height: 56rpx;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4d4f;
  color: white;
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  border: 4rpx solid white;
}

.bounce {
  animation: bounce 0.6s;
}

@keyframes bounce {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.3); }
}

/* 骨架屏 */
.skeleton-container {
  padding: 24rpx;
}

.skeleton-banner {
  height: 360rpx;
  background: #eee;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
}

.skeleton-mode {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.skeleton-mode-item {
  flex: 1;
  height: 160rpx;
  background: #eee;
  border-radius: 24rpx;
}

.skeleton-menu {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.skeleton-menu-item {
  width: 100rpx;
  height: 100rpx;
  background: #eee;
  border-radius: 50%;
}