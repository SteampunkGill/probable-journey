.checkout-page {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: 200rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: var(--text-color-medium);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.content {
  padding-bottom: 30rpx;
}

.section {
  background: white;
  margin: 20rpx 24rpx;
  padding: 24rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 15rpx rgba(139, 69, 19, 0.08);
  border: 2rpx solid var(--border-color);
}

/* 配送方式 */
.delivery-type {
  padding: 0;
  overflow: hidden;
}

.type-tabs {
  display: flex;
}

.tab {
  flex: 1;
  padding: 24rpx 20rpx;
  text-align: center;
  font-size: 32rpx;
  background: #f9f9f9;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  color: var(--text-color-medium);
}

.tab.active {
  background: white;
  color: var(--primary-dark);
  font-weight: 700;
  position: relative;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: var(--primary-color);
}

.tab .icon {
  font-size: 40rpx;
}

/* 地址/门店选择 */
.address-section, .store-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: relative;
  padding-right: 60rpx;
  min-height: 120rpx;
}

.address-card, .store-card {
  flex: 1;
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-color-dark);
}

.phone {
  font-size: 30rpx;
  color: var(--primary-color);
}

.address-detail {
  font-size: 28rpx;
  color: var(--text-color-medium);
  line-height: 1.6;
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
}

.address-detail .icon {
  font-size: 32rpx;
  color: var(--primary-light);
}

.store-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-color-dark);
  margin-bottom: 8rpx;
}

.store-address {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.store-time {
  font-size: 26rpx;
  color: var(--text-color-light);
}

.address-empty, .store-empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: var(--text-color-medium);
  padding: 20rpx 0;
}

.address-empty .icon, .store-empty .icon {
  font-size: 64rpx;
  opacity: 0.5;
}

.arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: var(--text-color-light);
}

/* 预计送达时间 */
.time-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: var(--accent-cream);
  border: 2rpx solid var(--primary-light);
}

.time-section .label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--primary-dark);
}

.time-section .time {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
  background: white;
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
}

/* 商品列表 */
.section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  color: var(--primary-dark);
  padding-left: 12rpx;
  border-left: 8rpx solid var(--primary-color);
}

.goods-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-color-dark);
}

.goods-specs {
  font-size: 24rpx;
  color: var(--text-color-medium);
  background: var(--accent-cream);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.goods-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-dark);
}

.quantity {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

/* 优惠券 */
.coupon-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
}

.coupon-section .label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--primary-dark);
}

.coupon-section .value {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.selected-coupon-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.coupon-name {
  font-size: 28rpx;
  color: var(--text-color-dark);
}

.coupon-tag {
  background: #ff4d4f;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.placeholder {
  color: var(--text-color-light);
  font-size: 28rpx;
}

.count {
  background: #ff4d4f;
  color: white;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 积分抵扣 */
.points-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.points-header .label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--primary-dark);
}

.points-input {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
}

.points-input input {
  width: 120rpx;
  background: white;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  text-align: center;
  padding: 4rpx 0;
}

/* 备注 */
.remark-label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--primary-dark);
  margin-bottom: 16rpx;
}

.remark-input {
  width: 100%;
  height: 120rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 费用明细 */
.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  font-size: 28rpx;
}

.amount-item .label {
  color: var(--text-color-medium);
}

.amount-item .value {
  color: var(--text-color-dark);
  font-weight: 600;
}

.amount-item.discount .value {
  color: #ff4d4f;
}

/* 底部提交栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.total-amount {
  display: flex;
  align-items: baseline;
}

.total-amount .label {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.total-amount .amount {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-dark);
}

.submit-btn {
  background: var(--primary-color);
  color: white;
  padding: 0 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 700;
  margin: 0;
}

.submit-btn.disabled {
  background: #ccc;
}