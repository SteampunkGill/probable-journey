.order-detail-page {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: 120rpx;
}

.loading {
  padding-top: 300rpx;
  text-align: center;
  color: var(--text-color-medium);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--border-color);
  border-top: 6rpx solid var(--primary-color);
  border-radius: 50%;
  margin: 0 auto 40rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.content {
  padding-bottom: 60rpx;
}

/* 状态区域 */
.status-section {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  padding: 80rpx 48rpx 60rpx;
  border-radius: 0 0 80rpx 80rpx;
  box-shadow: 0 8rpx 50rpx rgba(160, 82, 45, 0.2);
  position: relative;
}

.status-header {
  margin-bottom: 60rpx;
}

.status-text {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
}

.status-hint {
  font-size: 28rpx;
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.15);
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  display: inline-block;
}

/* 状态步骤 */
.status-steps {
  display: flex;
  justify-content: space-between;
  position: relative;
  padding: 0 20rpx;
}

.status-steps::before {
  content: '';
  position: absolute;
  top: 24rpx;
  left: 80rpx;
  right: 80rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.3);
  z-index: 1;
}

.step {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-dot {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 50%;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.step.active .step-dot {
  background: white;
  box-shadow: 0 0 30rpx rgba(255, 255, 255, 0.5);
  transform: scale(1.2);
}

.step-title {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-bottom: 8rpx;
}

.step.active .step-title {
  color: white;
  font-weight: 700;
}

.step-time {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 取餐码区域 */
.pickup-section {
  padding: 0 48rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 2;
}

.pickup-card {
  background: white;
  border-radius: 60rpx;
  padding: 60rpx;
  text-align: center;
  box-shadow: 0 16rpx 60rpx rgba(160, 82, 45, 0.15);
  border: 4rpx solid var(--accent-cream);
}

.pickup-label {
  font-size: 30rpx;
  color: var(--text-color-medium);
  display: block;
  margin-bottom: 30rpx;
}

.pickup-code {
  font-size: 112rpx;
  font-weight: 700;
  color: var(--primary-dark);
  margin: 40rpx 0;
  letter-spacing: 8rpx;
}

.copy-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white !important;
  padding: 24rpx 64rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: inline-block;
  width: auto !important;
  line-height: 1;
}

/* 通用卡片区域 */
.location-section, .goods-section, .info-section, .amount-section {
  background: white;
  margin: 40rpx 48rpx;
  padding: 48rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 30rpx rgba(139, 69, 19, 0.08);
  border: 2rpx solid var(--border-color);
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
  color: var(--primary-dark);
  padding-left: 24rpx;
  border-left: 8rpx solid var(--primary-color);
}

/* 地址/门店卡片 */
.address-card, .store-card {
  background: var(--background-color);
  padding: 40rpx;
  border-radius: 40rpx;
}

.address-header, .store-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.name, .store-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-color-dark);
}

.phone {
  font-size: 30rpx;
  color: var(--primary-color);
}

.address-detail, .store-address, .store-hours {
  font-size: 28rpx;
  color: var(--text-color-medium);
  line-height: 1.6;
}

.call-btn {
  background: white !important;
  color: var(--primary-dark) !important;
  border: 2rpx solid var(--primary-light) !important;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 16rpx;
  width: auto !important;
  margin: 0 !important;
  line-height: 1;
}

/* 商品列表 */
.goods-item {
  display: flex;
  gap: 40rpx;
  padding: 40rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  background: var(--background-color);
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-color-dark);
}

.goods-specs {
  font-size: 24rpx;
  color: var(--text-color-medium);
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-dark);
}

.goods-quantity {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

/* 订单信息 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx dashed var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.value {
  font-size: 28rpx;
  color: var(--text-color-dark);
  font-weight: 600;
}

.value-copy {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.copy-icon {
  background: var(--accent-cream);
  border: 2rpx solid var(--primary-light);
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: var(--primary-dark);
}

/* 费用明细 */
.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.amount-item.discount .value {
  color: #ff6b6b;
}

.amount-item.total {
  border-top: 4rpx solid var(--primary-light);
  margin-top: 20rpx;
  padding-top: 40rpx;
}

.amount-item.total .label {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-dark);
}

.amount-item.total .value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-dark);
}

/* 底部操作栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 0 48rpx;
  gap: 32rpx;
  box-shadow: 0 -8rpx 40rpx rgba(139, 69, 19, 0.1);
  z-index: 10;
}

.footer-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.footer-btn.primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white !important;
}

.footer-btn.secondary {
  background: white !important;
  color: var(--text-color-dark) !important;
  border: 2rpx solid var(--border-color) !important;
}