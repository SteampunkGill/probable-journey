.points-page {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: 48rpx;
}

/* ========== 积分卡片 ========== */
.points-card {
  height: 400rpx;
  position: relative;
  margin: 32rpx;
  border-radius: 48rpx;
  overflow: hidden;
  color: white;
  box-shadow: 0 12rpx 32rpx rgba(160, 82, 45, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
}

.card-content {
  position: relative;
  height: 100%;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: 1;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 500;
  display: block;
  margin-bottom: 16rpx;
}

.points-value {
  font-size: 112rpx;
  font-weight: 700;
  text-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.card-actions {
  display: flex;
  gap: 32rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  font-weight: 500;
  backdrop-filter: blur(5px);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.action-icon {
  font-size: 32rpx;
}

/* ========== 分类标签 ========== */
.category-tabs {
  display: flex;
  background: white;
  padding: 24rpx 32rpx;
  gap: 48rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 2rpx solid var(--border-color);
  overflow-x: auto;
}

.tab-item {
  font-size: 28rpx;
  color: var(--text-color-medium);
  padding: 12rpx 0;
  position: relative;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
}

/* ========== 商品列表 ========== */
.product-list {
  padding: 32rpx;
}

.product-item {
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  display: flex;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid var(--border-color);
}

.product-image {
  width: 240rpx;
  height: 240rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color-dark);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 24rpx;
  color: var(--text-color-medium);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  min-height: 68rpx;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.points-price {
  color: var(--primary-color);
}

.points-num {
  font-size: 40rpx;
  font-weight: 700;
}

.points-unit {
  font-size: 24rpx;
  margin-left: 4rpx;
}

.exchange-btn {
  background: var(--primary-color) !important;
  color: white !important;
  border: none;
  padding: 8rpx 32rpx !important;
  border-radius: 32rpx;
  font-size: 24rpx !important;
  font-weight: 600;
  margin: 0 !important;
  line-height: 2 !important;
}

.exchange-btn[disabled] {
  background: var(--border-color) !important;
  color: var(--text-color-light) !important;
}

.stock-info {
  font-size: 20rpx;
  color: #FF6B6B;
  margin-top: 8rpx;
}

/* ========== 空状态 ========== */
.empty-tip {
  padding-top: 120rpx;
  text-align: center;
  color: var(--text-color-light);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.2;
}

/* ========== 兑换记录弹窗 ========== */
.records-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(3px);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 48rpx 48rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid var(--border-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
}

.close-icon {
  font-size: 36rpx;
  color: var(--text-color-light);
  padding: 10rpx;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.record-name {
  font-size: 28rpx;
  color: var(--text-color-dark);
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 22rpx;
  color: var(--text-color-light);
}

.record-points {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: 600;
}