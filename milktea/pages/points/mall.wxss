.points-mall-page {
  min-height: 100vh;
  background: var(--background-color);
  padding-bottom: 48rpx;
}

/* ========== 头部样式 ========== */
.mall-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  padding: 48rpx 32rpx 32rpx;
  color: white;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  box-shadow: 0 8rpx 24rpx rgba(160, 82, 45, 0.15);
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
}

.header-right {
  display: flex;
  gap: 24rpx;
}

.icon-history, .icon-info {
  font-size: 36rpx;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

/* ========== 积分信息卡片 ========== */
.points-info-card {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 48rpx;
  padding: 32rpx;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.points-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.points-label {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 8rpx;
}

.points-value {
  display: flex;
  align-items: baseline;
}

.points-number {
  font-size: 80rpx;
  font-weight: 700;
  margin-right: 8rpx;
  color: white;
}

.points-unit {
  font-size: 28rpx;
  opacity: 0.9;
}

.points-right {
  background: white;
  border-radius: 40rpx;
  padding: 12rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.exchange-label {
  color: var(--primary-color);
  font-weight: 600;
  font-size: 24rpx;
}

/* ========== 积分操作按钮 ========== */
.points-actions {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  border-radius: 24rpx;
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.action-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon .iconfont {
  color: var(--primary-color);
  font-size: 36rpx;
}

/* ========== 搜索框 ========== */
.search-section {
  margin: -40rpx 32rpx 32rpx;
  padding: 32rpx;
  background: white;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(160, 82, 45, 0.08);
  border: 2rpx solid var(--border-color);
}

.search-box {
  display: flex;
  align-items: center;
  background: var(--background-color);
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
}

.search-box .iconfont {
  color: var(--primary-color);
  margin-right: 16rpx;
  font-size: 32rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color-dark);
}

/* ========== 分类标签 ========== */
.categories-section {
  padding: 16rpx 32rpx;
  border-top: 2rpx solid var(--border-color);
}

.categories-scroll {
  display: flex;
  gap: 16rpx;
  white-space: nowrap;
  height: 80rpx;
}

.category-item {
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  background: white;
  color: var(--text-color-medium);
  border: 2rpx solid var(--border-color);
  flex-shrink: 0;
}

.category-item.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

/* ========== 排序选项 ========== */
.sort-section {
  padding: 16rpx 32rpx;
  background: white;
}

.sort-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.sort-item {
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  font-size: 22rpx;
  background: var(--background-color);
  color: var(--text-color-medium);
  border: 2rpx solid var(--border-color);
}

.sort-item.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

/* ========== 商品列表 ========== */
.products-section {
  padding: 32rpx;
}

.loading-state {
  text-align: center;
  padding: 64rpx;
}

.loading-icon {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid var(--primary-light);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.product-card {
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid var(--border-color);
  position: relative;
}

.hot-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: linear-gradient(135deg, #FF6B6B, var(--primary-color));
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  z-index: 2;
}

.product-image {
  width: 100%;
  height: 280rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 24rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color-dark);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 22rpx;
  color: var(--text-color-medium);
  margin-bottom: 24rpx;
  height: 64rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.points-display {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.current-points {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-right: 4rpx;
}

.points-unit {
  font-size: 22rpx;
  color: var(--primary-color);
}

.original-points {
  font-size: 20rpx;
  color: var(--text-color-light);
  text-decoration: line-through;
  margin-left: 12rpx;
}

.stock-info {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: var(--text-color-medium);
  margin-bottom: 24rpx;
}

.limit-info {
  color: #FF6B6B;
}

.exchange-btn {
  width: 100% !important;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white !important;
  border: none;
  padding: 16rpx 0;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ========== 空状态 ========== */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-state .iconfont {
  font-size: 120rpx;
  color: var(--border-color);
  margin-bottom: 32rpx;
  display: block;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-color-medium);
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--text-color-light);
}

.footer-hint {
  padding: 32rpx;
  text-align: center;
  color: var(--text-color-light);
  font-size: 22rpx;
}