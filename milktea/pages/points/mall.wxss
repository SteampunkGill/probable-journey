.mall-page {
  min-height: 100vh;
  background: var(--background-color);
}

.mall-header {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  padding: 40rpx 30rpx 80rpx;
}

.points-info-card {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 40rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.points-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.points-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.points-value {
  display: flex;
  align-items: baseline;
  margin-top: 10rpx;
}

.points-number {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffffff;
  margin-right: 10rpx;
}

.points-unit {
  font-size: 24rpx;
  color: #ffffff;
}

.points-right {
  background: #ffffff;
  border-radius: 40rpx;
  padding: 12rpx 30rpx;
}

.exchange-label {
  color: var(--primary-color);
  font-size: 24rpx;
  font-weight: 600;
}

.categories-section {
  background: #ffffff;
  margin-top: -40rpx;
  border-radius: 40rpx 40rpx 0 0;
  padding: 30rpx;
  white-space: nowrap;
}

.categories-scroll {
  display: flex;
  gap: 20rpx;
}

.category-item {
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  background: var(--surface-color);
  color: var(--text-color-medium);
  border: 1rpx solid var(--border-color);
}

.category-item.active {
  background: var(--primary-color);
  color: #ffffff;
  border-color: var(--primary-color);
}

.products-section {
  padding: 20rpx;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-color);
}

.product-image {
  width: 100%;
  height: 300rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color-dark);
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-points {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.current-points {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 6rpx;
}

.points-unit {
  font-size: 22rpx;
  color: var(--primary-color);
}

.exchange-btn {
  width: 100%;
  background: var(--primary-color);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 12rpx;
  padding: 10rpx 0;
}

.exchange-btn[disabled] {
  background: #cccccc;
  color: #ffffff;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: var(--text-color-light);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.2;
}