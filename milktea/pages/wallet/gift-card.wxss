.gift-card-page {
  min-height: 100vh;
  background: var(--background-color);
}

.tabs-nav {
  display: flex;
  background: #ffffff;
  border-bottom: 1rpx solid var(--border-color);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: var(--text-color-medium);
  position: relative;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

.tab-content {
  padding: 30rpx;
}

.card-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.card-item {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  color: white;
  position: relative;
  box-shadow: var(--shadow-md);
}

.card-item.USED, .card-item.EXPIRED {
  background: #999999;
}

.card-no {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 20rpx;
}

.card-balance {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.unit {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.val {
  font-size: 64rpx;
  font-weight: bold;
}

.card-face {
  font-size: 24rpx;
  opacity: 0.8;
}

.card-badge {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  padding: 6rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  font-size: 22rpx;
}

.card-footer {
  margin-top: 30rpx;
  font-size: 22rpx;
  opacity: 0.7;
  text-align: right;
}

.empty-box {
  padding: 100rpx 0;
  text-align: center;
  color: var(--text-color-light);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.2;
}

.section-label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.price-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.price-card {
  background: #ffffff;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 40rpx 0;
  text-align: center;
}

.price-card.active {
  border-color: var(--primary-color);
  background: var(--primary-light);
  color: var(--primary-color);
}

.p-val {
  font-size: 32rpx;
  font-weight: bold;
}

.form-group {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}

.input-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.input-item:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
}

.input-item input {
  flex: 1;
  font-size: 28rpx;
}

.primary-btn {
  width: 100%;
  background: var(--primary-color);
  color: white;
  border-radius: 44rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

.usage-tips {
  margin-top: 60rpx;
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.tips-title {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.tips-li {
  font-size: 24rpx;
  color: var(--text-color-medium);
  margin-bottom: 8rpx;
}