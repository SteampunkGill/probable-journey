.gift-card-page {
  min-height: 100vh;
  background: var(--background-color);
}

/* 标签页导航 */
.tabs-nav {
  display: flex;
  background: white;
  border-bottom: 2rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color-medium);
  position: relative;
}

.tab-item.active {
  color: var(--primary-color);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 6rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
}

/* 标签页内容 */
.tab-content {
  padding: 32rpx;
}

/* 我的礼品卡 */
.card-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.card-item {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  border-radius: 32rpx;
  padding: 32rpx;
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(160, 82, 45, 0.2);
}

.card-item.used {
  background: linear-gradient(135deg, #ccc, #999);
}

.card-item.expired {
  background: linear-gradient(135deg, #999, #777);
}

.card-item.unused {
  background: linear-gradient(135deg, var(--accent-pink), var(--primary-light));
}

.card-no {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 32rpx;
  letter-spacing: 2rpx;
}

.card-balance {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.card-balance .unit {
  font-size: 40rpx;
  font-weight: 700;
  margin-right: 8rpx;
}

.card-balance .val {
  font-size: 72rpx;
  font-weight: 800;
}

.card-face {
  font-size: 26rpx;
  opacity: 0.8;
}

.card-badge {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 700;
}

.card-footer {
  margin-top: 32rpx;
  font-size: 22rpx;
  text-align: right;
  opacity: 0.7;
}

/* 空状态 */
.empty-box {
  text-align: center;
  padding: 160rpx 32rpx;
  background: white;
  border-radius: 32rpx;
  border: 4rpx dashed var(--border-color);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

/* 购买礼品卡 */
.section-label {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--primary-dark);
  margin-bottom: 32rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid var(--primary-color);
}

.price-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 64rpx;
}

.price-card {
  background: white;
  border: 4rpx solid var(--border-color);
  border-radius: 24rpx;
  padding: 48rpx 0;
  text-align: center;
}

.price-card.active {
  border-color: var(--primary-color);
  color: var(--primary-color);
  background: var(--accent-cream);
}

.p-val {
  font-size: 44rpx;
  font-weight: 800;
}

/* 激活礼品卡 */
.form-group {
  background: white;
  border-radius: 32rpx;
  padding: 0 32rpx;
  margin-bottom: 64rpx;
  border: 2rpx solid var(--border-color);
}

.input-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.input-item:last-child {
  border-bottom: none;
}

.input-item label {
  width: 140rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.input-item input {
  flex: 1;
  font-size: 28rpx;
}

/* 使用提示 */
.usage-tips {
  margin-top: 64rpx;
  padding: 32rpx;
  background: var(--accent-cream);
  border-radius: 24rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--primary-dark);
  margin-bottom: 16rpx;
}

.tips-list {
  font-size: 26rpx;
  line-height: 1.8;
  color: var(--text-color-medium);
}

/* 主要按钮 */
.primary-btn {
  width: 100% !important;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white !important;
  border: none;
  padding: 24rpx 0 !important;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.primary-btn[disabled] {
  background: var(--border-color) !important;
  color: var(--text-color-light) !important;
}