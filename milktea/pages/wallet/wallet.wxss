.wallet-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 30rpx;
}

.balance-card {
  height: 360rpx;
  position: relative;
  border-radius: 32rpx;
  overflow: hidden;
  color: white;
  margin-bottom: 40rpx;
  box-shadow: var(--shadow-lg);
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
}

.card-content {
  position: relative;
  height: 100%;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  z-index: 1;
}

.balance-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.balance-amount {
  font-size: 80rpx;
  font-weight: bold;
  margin: 20rpx 0 40rpx;
}

.card-actions {
  display: flex;
  gap: 20rpx;
  margin-top: auto;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 28rpx;
  backdrop-filter: blur(5px);
}

.menu-section {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: var(--shadow-sm);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  font-size: 40rpx;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color-dark);
}

.menu-arrow {
  font-size: 40rpx;
  color: var(--text-color-light);
}

.tips-section {
  background: #FFF9C4;
  border-radius: 24rpx;
  padding: 30rpx;
  border: 1rpx solid #FFF176;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #F57F17;
  margin-bottom: 20rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #795548;
  margin-bottom: 10rpx;
}