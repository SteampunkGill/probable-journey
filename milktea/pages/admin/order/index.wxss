.order-manage {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background: #f5f0e1;
  min-height: 100vh;
  padding: 24rpx;
}

.card {
  background: white;
  padding: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(160, 82, 45, 0.08);
  border: 2rpx solid #e0e0e0;
}

.action-bar {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.search-form {
  display: flex;
  gap: 16rpx;
  align-items: center;
  flex-wrap: wrap;
}

.admin-input {
  flex: 1;
  height: 70rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}

.admin-select {
  height: 70rpx;
  line-height: 70rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background: #fff;
  min-width: 160rpx;
}

.batch-actions {
  display: flex;
  gap: 16rpx;
}

.order-tabs {
  white-space: nowrap;
  height: 90rpx;
}

.tab-list {
  display: flex;
  padding: 0 20rpx;
}

.tab-item {
  display: inline-block;
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #a0522d;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 4rpx;
  background: #a0522d;
}

.admin-table {
  display: flex;
  flex-direction: column;
}

.tr {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.th {
  background: #fff8dc;
  font-weight: bold;
}

.td {
  flex: 1;
  font-size: 24rpx;
  padding: 0 10rpx;
  text-align: center;
  word-break: break-all;
}

.td.checkbox { flex: 0 0 60rpx; }
.td.no { flex: 2; text-align: left; }
.td.time { flex: 1.5; }
.td.ops { flex: 2.5; display: flex; gap: 8rpx; flex-wrap: wrap; justify-content: center; }

.status-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.status-PAID { background: #fff7e6; color: #fa8c16; }
.status-MAKING { background: #e6f7ff; color: #1890ff; }
.status-READY { background: #f6ffed; color: #52c41a; }
.status-COMPLETED { background: #f0f0f0; color: #8c8c8c; }

.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  display: flex; align-items: center; justify-content: center;
  z-index: 100;
}

.modal-container {
  width: 85%;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.info-row {
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.admin-textarea {
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.modal-footer {
  margin-top: 30rpx;
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
}

.btn-primary { background: #a0522d; color: white; font-size: 26rpx; }
.btn-success { background: #2c9678; color: white; font-size: 26rpx; }
.btn-warning { background: #fa8c16; color: white; font-size: 26rpx; }
.btn-danger { background: #ff4d4f; color: white; font-size: 26rpx; }
.btn-info { background: #1890ff; color: white; font-size: 26rpx; }

.text-danger { color: #ff4d4f; font-weight: bold; }