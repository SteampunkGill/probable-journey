.inventory-manage {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  background: #f5f0e1;
  min-height: 100vh;
  padding: 32rpx;
  color: #4a3b30;
}

.card {
  background: #ffffff;
  padding: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(160, 82, 45, 0.08);
  border: 1rpx solid #e8dccb;
}

.page-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #8b4513;
}

.table-header {
  display: flex;
  background: #fff8dc;
  padding: 20rpx 0;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.th {
  flex: 1;
  font-size: 24rpx;
  font-weight: bold;
  color: #8b4513;
  text-align: center;
}

.tr {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.td {
  flex: 1;
  font-size: 24rpx;
  text-align: center;
}

.name-col {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name {
  font-weight: bold;
}

.unit {
  font-size: 20rpx;
  color: #999;
}

.text-danger {
  color: #d93025;
  font-weight: bold;
}

.badge {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.badge-warn {
  background: #fce8e6;
  color: #d93025;
}

.badge-success {
  background: #e6f4ea;
  color: #1e8e3e;
}

.ops-col {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 0 8rpx;
}

.op-btn {
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 20rpx;
  padding: 0;
  background: rgba(160, 82, 45, 0.1);
  color: #a0522d;
  border-radius: 8rpx;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-container {
  width: 80%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.form-item {
  margin: 32rpx 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.admin-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8dccb;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.cost-tip {
  background: #fff7e6;
  padding: 16rpx;
  border-radius: 8rpx;
  color: #873800;
  font-size: 22rpx;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.modal-footer button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #a0522d;
  color: #ffffff;
}