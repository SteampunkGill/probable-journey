.product-manage {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  background: #f5f0e1;
  min-height: 100vh;
  padding: 32rpx;
}

.card {
  background: white;
  padding: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(160, 82, 45, 0.08);
  border: 2rpx solid #d4c7b5;
}

.action-bar {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.search-form {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.admin-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #d4c7b5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.admin-select {
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #d4c7b5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fff;
  min-width: 160rpx;
}

.batch-actions {
  display: flex;
  gap: 16rpx;
}

.batch-actions button {
  flex: 1;
  font-size: 24rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0;
}

/* 表格模拟 */
.admin-table {
  display: flex;
  flex-direction: column;
}

.tr {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.th {
  background: #fff8dc;
  font-weight: bold;
  border-bottom: 4rpx solid #deb887;
}

.td {
  flex: 1;
  font-size: 24rpx;
  padding: 0 10rpx;
  text-align: center;
}

.td.checkbox { flex: 0 0 60rpx; }
.td.img { flex: 0 0 100rpx; }
.td.name { flex: 2; text-align: left; }
.td.ops { flex: 2; display: flex; gap: 10rpx; justify-content: center; }

.table-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.status-on { color: #2c9678; background: rgba(44, 150, 120, 0.1); padding: 4rpx 12rpx; border-radius: 20rpx; }
.status-off { color: #c13c3c; background: rgba(193, 60, 60, 0.1); padding: 4rpx 12rpx; border-radius: 20rpx; }

.text-danger { color: #c13c3c; font-weight: bold; }
.badge-warn { font-size: 20rpx; background: #ff6b6b; color: white; padding: 2rpx 8rpx; border-radius: 4rpx; margin-left: 4rpx; }

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.modal-container {
  width: 90%;
  background: white;
  border-radius: 30rpx;
  padding: 32rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  text-align: center;
  color: #8b4513;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item .label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.admin-textarea {
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #d4c7b5;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.upload-box {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #d4c7b5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.upload-placeholder {
  font-size: 60rpx;
  color: #d4c7b5;
}

.modal-footer {
  margin-top: 32rpx;
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
}

.btn-primary { background: #a0522d; color: white; }
.btn-success { background: #2c9678; color: white; }
.btn-warning { background: #deb887; color: white; }
.btn-danger { background: #c13c3c; color: white; }

.recipe-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.btn-text-danger { color: #c13c3c; font-size: 24rpx; }
.btn-dashed { border: 2rpx dashed #d4c7b5; background: #fff8dc; font-size: 24rpx; margin-top: 16rpx; }
.recipe-summary { margin-top: 24rpx; text-align: right; font-size: 28rpx; }