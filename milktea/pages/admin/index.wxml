<view class="admin-index">
  <view class="header">
    <text class="title">管理后台</text>
    <view class="user-info">
      <text class="role">管理员</text>
      <view class="logout-btn" bindtap="logout">退出</view>
    </view>
  </view>

  <view class="menu-grid">
    <view class="menu-item" wx:for="{{menuItems}}" wx:key="path" bindtap="navigateTo" data-path="{{item.path}}">
      <view class="icon-wrapper">
        <text class="icon">{{item.emoji}}</text>
      </view>
      <text class="name">{{item.name}}</text>
    </view>
  </view>
</view>