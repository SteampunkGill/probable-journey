.admin-index {
  min-height: 100vh;
  background: #f5f0e1;
  padding: 32rpx;
}

.admin-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  padding: 24rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(160, 82, 45, 0.08);
}

.logo {
  font-size: 36rpx;
  font-weight: bold;
  color: #a0522d;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-info text {
  font-size: 28rpx;
  color: #666;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.menu-card {
  background: white;
  padding: 48rpx 24rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 8rpx 25rpx rgba(160, 82, 45, 0.08);
  border: 2rpx solid #e8dccb;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f5f0e1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #a0522d;
}

.menu-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #4a3b30;
}

