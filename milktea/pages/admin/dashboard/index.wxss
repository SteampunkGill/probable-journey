.dashboard-container {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f5f0e1 0%, #f8f4e6 100%);
  min-height: 100vh;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.metric-card {
  background: linear-gradient(135deg, #fff8dc 0%, #f5f0e1 100%);
  padding: 28rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(160, 82, 45, 0.08);
  border: 3rpx solid #e8dccb;
  position: relative;
  overflow: hidden;
}

.metric-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ffc0cb, #a0522d);
}

.metric-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.metric-label {
  color: #4a3b30;
  font-weight: 600;
  font-size: 28rpx;
}

.metric-unit {
  background: rgba(160, 82, 45, 0.1);
  color: #a0522d;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.metric-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #8b4513;
  margin-bottom: 20rpx;
}

.metric-footer {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.compare-label {
  color: #7a6a5b;
  opacity: 0.8;
}

.compare-value {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.compare-value.up {
  background: rgba(44, 150, 120, 0.1);
  color: #2c9678;
}

.compare-value.down {
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
}

.card {
  background: white;
  border-radius: 30rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 25rpx rgba(160, 82, 45, 0.08);
  border: 3rpx solid #e8dccb;
}

.card-header {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 28rpx;
  color: #8b4513;
  padding-bottom: 16rpx;
  border-bottom: 3rpx dashed #d4c7b5;
}

.charts-row {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.bar-chart {
  height: 300rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 40rpx 20rpx 0;
}

.bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.bar-wrapper {
  width: 40rpx;
  height: 200rpx;
  background: #f5f0e1;
  border-radius: 20rpx;
  position: relative;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.bar {
  width: 100%;
  background: linear-gradient(to top, #a0522d 0%, #d2b48c 100%);
  border-radius: 20rpx;
}

.bar-label {
  font-size: 20rpx;
  color: #7a6a5b;
}

.line-chart-placeholder {
  height: 300rpx;
  position: relative;
  border-bottom: 3rpx dashed #d4c7b5;
  border-left: 3rpx dashed #d4c7b5;
  margin: 20rpx;
}

.line-point {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.point {
  width: 16rpx;
  height: 16rpx;
  background: #a0522d;
  border-radius: 50%;
  border: 4rpx solid #fff8dc;
}

.point-label {
  font-size: 18rpx;
  color: #8b4513;
  margin-top: 8rpx;
  transform: rotate(-45deg);
  white-space: nowrap;
}

.bottom-row {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ranking-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 20rpx;
  border-radius: 25rpx;
  background: #fff8dc;
  border: 2rpx solid #e8dccb;
}

.rank-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rank-index {
  width: 40rpx;
  height: 40rpx;
  background: #f5f0e1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #7a6a5b;
  font-weight: 700;
}

.rank-index.top3 {
  background: #a0522d;
  color: white;
}

.rank-name {
  font-size: 28rpx;
  color: #4a3b30;
  font-weight: 600;
}

.rank-data {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.rank-count {
  font-size: 24rpx;
  color: #2c9678;
}

.rank-amount {
  font-size: 24rpx;
  color: #8b4513;
  font-weight: 700;
}

.alert-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.alert-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  border-radius: 25rpx;
  border: 2rpx solid;
}

.alert-item.warning {
  background: #fff5f5;
  border-color: #ffc0cb;
}

.alert-item.danger {
  background: #fff0f0;
  border-color: #ff6b6b;
}

.alert-content {
  flex: 1;
}

.alert-title {
  font-weight: 700;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.alert-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.empty-alert {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}