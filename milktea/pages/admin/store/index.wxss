.store-management {
  padding: 32rpx;
  background: var(--background-color);
  min-height: 100vh;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--primary-dark);
}

.btn-primary {
  margin: 0;
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: var(--primary-color);
  color: white;
  font-size: 28rpx;
  border-radius: 36rpx;
}

.filter-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: white;
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  border: 2rpx solid var(--border-color);
}

.status-picker {
  height: 80rpx;
  line-height: 80rpx;
  background: white;
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  border: 2rpx solid var(--border-color);
  min-width: 200rpx;
}

.store-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.store-card {
  background: white;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(160, 82, 45, 0.05);
  border: 2rpx solid var(--border-color);
}

.store-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.store-name {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-color-dark);
}

.status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.status-tag.open { background: #e6f4ea; color: #1e8e3e; }
.status-tag.closed { background: #fce8e6; color: #d93025; }
.status-tag.maintenance { background: #fef7e0; color: #f9ab00; }

.info-item {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 28rpx;
}

.info-item .label {
  color: var(--text-color-medium);
  width: 120rpx;
}

.info-item .value {
  color: var(--text-color-dark);
  flex: 1;
}

.store-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx dashed var(--border-color);
}

.action-btn {
  font-size: 28rpx;
  font-weight: 500;
}

.action-btn.edit { color: var(--primary-color); }
.action-btn.delete { color: #ff6b6b; }

/* 弹窗样式 */
.dialog-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.dialog {
  background: white;
  width: 600rpx;
  border-radius: 40rpx;
  padding: 40rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
}

.dialog-content {
  flex: 1;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-color-medium);
  margin-bottom: 12rpx;
}

.form-input, .region-picker, .status-picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: 2rpx solid #eee;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.dialog-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn-cancel, .btn-save {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-save {
  background: var(--primary-color);
  color: white;
}