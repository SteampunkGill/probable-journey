.coupon-page {
  min-height: 100vh;
  background-color: var(--background-color);
  padding: 24rpx;
}

.tabs {
  display: flex;
  background-color: white;
  border-radius: 40rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
  position: sticky;
  top: 24rpx;
  z-index: 10;
  border: 2rpx solid var(--border-color);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: var(--text-color-medium);
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

.tab.active {
  color: var(--primary-color);
  font-weight: 700;
  background-color: var(--accent-cream);
  box-shadow: 0 4rpx 12rpx rgba(160, 82, 45, 0.15);
}

.coupon-list {
  padding: 10rpx;
}

.coupon-item {
  background-color: white;
  border-radius: 24rpx;
  display: flex;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  border: 2rpx solid var(--border-color);
  position: relative;
}

.recommend-item {
  border-color: #ffc0cb;
}

.best-item {
  border-color: #ff4d4f;
}

.disabled-item {
  opacity: 0.6;
  filter: grayscale(0.5);
}

.recommend-tag {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #ff7875 0%, #ff4d4f 100%);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 0 0 0 20rpx;
  z-index: 2;
  font-weight: bold;
}

.coupon-left {
  width: 200rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: var(--accent-cream);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.value {
  font-size: 56rpx;
  font-weight: 800;
}

.condition {
  font-size: 22rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.coupon-right {
  flex: 1;
  padding: 24rpx;
  position: relative;
}

.name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-color-dark);
  margin-bottom: 12rpx;
}

.desc {
  font-size: 24rpx;
  color: var(--text-color-medium);
  margin-bottom: 16rpx;
  background-color: #fff8dc;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.expire {
  font-size: 22rpx;
  color: var(--primary-dark);
  opacity: 0.8;
}

.use-btn {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  padding: 0 32rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 700;
  margin: 0;
}

.empty-state {
  padding-top: 160rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.4;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-color-dark);
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--text-color-light);
}