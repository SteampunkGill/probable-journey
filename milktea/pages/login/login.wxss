.login-page {
  min-height: 100vh;
  background: #f5f0e1;
  padding: 60rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.login-page.admin {
  background: linear-gradient(135deg, #2a2118 0%, #3a2e22 100%);
}

/* 顶部Logo */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 32rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  border: 6rpx solid white;
}

.logo {
  width: 100rpx;
  height: 100rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #8b4513;
  margin-bottom: 16rpx;
}

.login-page.admin .app-name {
  color: #fff8dc;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.login-page.admin .subtitle {
  color: rgba(255, 255, 255, 0.6);
}

/* 角色切换 */
.role-tabs {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto 60rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  display: flex;
  position: relative;
  height: 88rpx;
  padding: 8rpx;
  border: 2rpx solid #e0e0e0;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  z-index: 1;
}

.tab-item.active {
  color: white;
  font-weight: 600;
}

.tab-slider {
  position: absolute;
  width: 50%;
  height: calc(100% - 16rpx);
  background: #a0522d;
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

/* 登录卡片 */
.login-card {
  background: white;
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
  width: 100%;
  box-sizing: border-box;
}

.login-page.admin .login-card {
  background: rgba(58, 46, 34, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.form-group {
  margin-bottom: 32rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  height: 100rpx;
  background: #f9f9f9;
  border-radius: 20rpx;
  border: 2rpx solid #eee;
  padding: 0 32rpx;
}

.input-wrapper.input-focus {
  border-color: #a0522d;
  background: white;
}

.input-wrapper .iconfont {
  color: #999;
  margin-right: 20rpx;
  font-size: 36rpx;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
}

.login-page.admin .input-field {
  color: white;
}

.form-options {
  margin-bottom: 40rpx;
}

.remember-label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.login-page.admin .remember-label {
  color: rgba(255, 255, 255, 0.7);
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: #a0522d;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn[disabled] {
  background: #ccc !important;
  color: white !important;
}

.bottom-actions {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  font-size: 28rpx;
}

.register-link {
  color: #a0522d;
  font-weight: 600;
  margin-left: 10rpx;
}

/* 协议 */
.agreement-section {
  display: flex;
  align-items: flex-start;
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  margin-left: 10rpx;
}

.agreement-link {
  color: #a0522d;
}

/* 其他登录 */
.other-login {
  margin-top: 60rpx;
  width: 100%;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.divider::before, .divider::after {
  content: "";
  flex: 1;
  height: 2rpx;
  background: #eee;
}

.divider text {
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #999;
}

.other-options {
  display: flex;
  justify-content: center;
}

.icon-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border: 2rpx solid #eee;
  color: #07C160;
}

.icon-circle .iconfont {
  font-size: 60rpx;
}

.guest-login {
  margin-top: 40rpx;
}

.guest-text {
  font-size: 26rpx;
  color: #999;
  text-decoration: underline;
}