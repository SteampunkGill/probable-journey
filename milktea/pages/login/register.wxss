.register-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 64rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header {
  text-align: center;
  margin-bottom: 64rpx;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 24rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-md);
}

.logo {
  width: 100rpx;
  height: 100rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-dark);
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-color-medium);
}

.register-card {
  background: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: 48rpx;
  box-shadow: var(--shadow-lg);
  width: 100%;
  border: 1rpx solid var(--border-color);
}

.type-switch {
  display: flex;
  background: var(--background-color);
  border-radius: var(--border-radius-md);
  padding: 8rpx;
  margin-bottom: 48rpx;
}

.switch-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: var(--text-color-medium);
  border-radius: var(--border-radius-sm);
  transition: all 0.3s;
}

.switch-item.active {
  background: var(--primary-color);
  color: #ffffff;
  font-weight: bold;
}

.form-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: var(--text-color-dark);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-wrapper {
  display: flex;
  align-items: center;
  height: 100rpx;
  background: #ffffff;
  border-radius: var(--border-radius-md);
  border: 2rpx solid var(--border-color);
  padding: 0 32rpx;
  transition: all 0.3s;
}

.input-wrapper.input-focus {
  border-color: var(--primary-color);
}

.input-wrapper.error {
  border-color: #ff6b6b;
}

.input-wrapper .iconfont {
  color: var(--text-color-light);
  margin-right: 20rpx;
  font-size: 36rpx;
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: var(--text-color-dark);
}

.eye-icon {
  padding: 16rpx;
}

.error-msg {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 8rpx;
}

.register-btn {
  width: 100%;
  height: 100rpx;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.register-btn.admin-btn {
  background: #1890ff;
}

.register-btn[disabled] {
  background: var(--border-color) !important;
  color: var(--text-color-light) !important;
}

.bottom-actions {
  display: flex;
  justify-content: center;
  margin-top: 32rpx;
  font-size: 28rpx;
}

.no-account {
  color: var(--text-color-medium);
}

.login-link {
  color: var(--primary-color);
  font-weight: bold;
  margin-left: 12rpx;
}

.agreement-section {
  display: flex;
  align-items: flex-start;
  margin-top: 48rpx;
  padding: 0 32rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: var(--text-color-medium);
  line-height: 1.5;
}

.agreement-link {
  color: var(--primary-color);
}

checkbox {
  transform: scale(0.8);
  margin-top: -4rpx;
}