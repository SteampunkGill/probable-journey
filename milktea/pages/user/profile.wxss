.profile-page {
  min-height: 100vh;
  background: var(--background-color);
  padding: 32rpx;
}

/* 卡片通用样式 */
.card {
  background: white;
  border-radius: 48rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(160, 82, 45, 0.08);
  border: 2rpx solid var(--border-color);
  position: relative;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, var(--primary-color) 0%, #deb887 100%);
  opacity: 0.6;
}

/* 头像区域 */
.avatar-section {
  padding: 32rpx;
}

.avatar-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}

.avatar-item .label {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color-dark);
}

.right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid var(--accent-cream);
  box-shadow: 0 8rpx 16rpx rgba(139, 69, 19, 0.15);
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.upload-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(160, 82, 45, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 6rpx solid var(--accent-cream);
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.icon-right {
  font-size: 36rpx;
  color: var(--text-color-medium);
}

/* 表单区域 */
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx;
  border-bottom: 2rpx solid var(--border-color);
  min-height: 120rpx;
  box-sizing: border-box;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.disabled {
  background-color: rgba(232, 220, 203, 0.3);
}

.form-item .label {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-color-dark);
  width: 180rpx;
}

.form-item .value, .picker-value {
  font-size: 30rpx;
  color: var(--text-color-medium);
  text-align: right;
  flex: 1;
}

.input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: var(--text-color-dark);
}

/* 性别选择器 */
.gender-options {
  display: flex;
  gap: 32rpx;
  align-items: center;
}

.gender-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: var(--text-color-medium);
}

/* 保存按钮 */
.save-btn {
  width: 100% !important;
  height: 104rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white !important;
  border-radius: 52rpx;
  font-size: 34rpx;
  font-weight: 600;
  margin-top: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(160, 82, 45, 0.2);
}

.save-btn.disabled {
  opacity: 0.6;
}