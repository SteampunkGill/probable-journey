.bind-card-page {
  min-height: 100vh;
  background: var(--background-color);
}

.content {
  padding: 32rpx;
}

/* 标签页头部 */
.tab-header {
  display: flex;
  background: var(--accent-cream);
  border-radius: 24rpx;
  padding: 8rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid var(--border-color);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-color-medium);
  border-radius: 16rpx;
}

.tab-item.active {
  background: white;
  color: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(160, 82, 45, 0.15);
}

/* 卡片预览 */
.card-preview {
  margin-bottom: 48rpx;
}

.card-bg {
  height: 400rpx;
  background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
  border-radius: 40rpx;
  padding: 48rpx;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 15rpx 35rpx rgba(160, 82, 45, 0.2);
  position: relative;
  overflow: hidden;
}

.card-bg.bound {
  background: linear-gradient(135deg, var(--primary-color), var(--accent-brown));
}

.card-bg.apply {
  background: linear-gradient(135deg, var(--accent-pink), var(--primary-light));
}

.card-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.brand {
  font-size: 44rpx;
  font-weight: 800;
}

.card-type {
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
}

.card-number {
  font-size: 56rpx;
  letter-spacing: 6rpx;
  text-align: center;
  font-weight: 700;
}

.card-number-placeholder {
  font-size: 36rpx;
  opacity: 0.7;
  text-align: center;
}

.card-status {
  text-align: right;
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  align-self: flex-end;
}

/* 表单 */
.bind-form {
  background: white;
  border-radius: 32rpx;
  padding: 0 32rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid var(--border-color);
}

.form-item {
  display: flex;
  align-items: center;
  height: 120rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.form-item:last-child {
  border-bottom: none;
}

.form-item label {
  width: 160rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.form-item input, .form-item picker {
  flex: 1;
  font-size: 30rpx;
}

.picker-value {
  font-size: 30rpx;
}

.picker-value.placeholder {
  color: var(--text-color-light);
}

/* 按钮 */
.action-btn {
  width: 100% !important;
  height: 100rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white !important;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn[disabled] {
  background: var(--border-color) !important;
  color: var(--text-color-light) !important;
}

.unbind-btn {
  width: 100% !important;
  height: 100rpx;
  background: white !important;
  color: #ff6b6b !important;
  border: 2rpx solid #ff6b6b !important;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 32rpx;
}

/* 提示 */
.tips {
  margin-top: 64rpx;
  padding: 32rpx;
  background: var(--accent-cream);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: var(--text-color-medium);
  line-height: 1.8;
}

.tips-title {
  font-weight: 700;
  color: var(--primary-dark);
  margin-bottom: 16rpx;
}