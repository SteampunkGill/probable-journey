.user-page {
  min-height: 100vh;
  background: #f5f0e1;
  padding-bottom: 40rpx;
}

/* 用户头部 */
.user-header {
  background: linear-gradient(135deg, #a0522d, #8b4513);
  padding: 60rpx 40rpx 40rpx;
  color: #fff8dc;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(139, 69, 19, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 40rpx;
  padding: 20rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.1);
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  background: #fff8dc;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 10rpx;
}

.user-meta {
  display: flex;
  gap: 20rpx;
  font-size: 26rpx;
  opacity: 0.9;
}

.user-level {
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.user-assets {
  display: flex;
  justify-content: space-around;
  text-align: center;
  gap: 20rpx;
}

.asset-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding: 20rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  flex: 1;
}

.asset-value {
  font-size: 36rpx;
  font-weight: 800;
}

.asset-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 卡片通用 */
.card {
  background: white;
  margin: 24rpx 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 69, 19, 0.12);
  position: relative;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(to right, #ffc0cb, #a0522d, #8b4513);
  border-radius: 24rpx 24rpx 0 0;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #8b4513;
}

/* 资产网格 */
.assets-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.asset-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 10rpx;
  background: #fff8dc;
  border-radius: 16rpx;
}

.asset-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
}

.asset-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #4a3b30;
}

.asset-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #a0522d;
}

/* 特权列表 */
.privilege-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.privilege-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx;
  background: #fff8dc;
  border-radius: 16rpx;
}

.privilege-icon {
  font-size: 64rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 50%;
}

.privilege-info {
  flex: 1;
}

.privilege-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #8b4513;
  display: block;
}

.privilege-desc {
  font-size: 24rpx;
  color: #666;
}

.receive-btn {
  background: #a0522d;
  color: white;
  font-size: 24rpx;
  padding: 0 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  margin: 0;
}

/* 功能列表 */
.function-list {
  display: flex;
  flex-direction: column;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.function-left .iconfont {
  font-size: 40rpx;
}

.function-name {
  font-size: 28rpx;
  font-weight: 600;
}

/* 客服中心 */
.service-section {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin: 40rpx 32rpx;
}

.service-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 0;
  height: 88rpx;
  border-radius: 44rpx;
  background: white;
  font-size: 28rpx;
  font-weight: 600;
  color: #4a3b30;
  flex: 1;
  border: 2rpx solid #e0e0e0;
}

.service-btn .iconfont {
  font-size: 36rpx;
}

/* 设置按钮 */
.settings-btn {
  margin: 0 32rpx 40rpx;
  height: 88rpx;
  background: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: 2rpx solid #e0e0e0;
}